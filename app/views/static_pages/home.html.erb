<!--~~~~~~~~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~ Facebook Open Graph ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<% content_for :head do %>
		<%= tag :meta, property: "og:type", content: "website" %>
		<%= tag :meta, property: "og:title", content: "Ratafire" %>
		<%= tag :meta, property: "og:description", content: "Ratafire elevates independent creativity to its full potential." %>
		<a style="display:none;"href="https://plus.google.com/108376636120204861351" rel="publisher">Google+</a>
	<% end %>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Font ~~~~~~~~~~~~~~~~~~~~~~~~-->	
<link href='http://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Page Contents ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<% content_for :additional_background do %>

		<!-- Window 1 -->
	<div class="wrapper-main">
		<section class="window" id="window1">

		<!-- Home Page Beta Pic -->
	
		<div class="Home-page-bg">
			<%= image_tag("betabg.jpg") %>
		</div>

			<div class="center" style="margin: 0 auto;width:1089px;position:absolute;">
				<!-- Logo Image -->
				<div style="margin-top:40px;"><%= image_tag("ratafire.png", alt: "Ratafire") %></div>
		
				<!-- Click to Play Video -->
				<div id="Home-page-video-click">
					
					

					<!-- Home Page Comment -->
					<div id="Home-page-comment">

						<h2 style="color:#666;" >
							Elevates independent creativity to its full potential
						</h2>


					</div>


				</div><!-- end#Home-page-video-click-->	

				<!-- Video Holder -->
				<%= render 'static_pages/video'%>

				<!-- Home Page Buttons -->
				<div id="Home-page-btn">
						<% unless browser.windows? %>
						<div class="signup-with-facebook-button-home">
							<%= link_to image_tag("/assets/facebook.png"), user_omniauth_authorize_path(:facebook), class:"tipsy-tipsy-ne no_ajaxify", title:"Signup with Facebook"%>
						</div>					
						<% end %>
						<%= link_to "SIGN UP", new_user_registration_path , class: "btn btn-small2 btn-small-green Home-page-margin no_ajaxify"%>

						<%= link_to "SIGN IN", new_user_session_path , class: "btn btn-small2 btn-small-blue Home-page-margin no_ajaxify" %>

						<!-- Who is Ratatoskr? -->
						<span><a class="darkgrey" href="http://en.wikipedia.org/wiki/Ratatoskr" target="_blank" >Who is Ratatoskr?</a></span>

				</div><!-- end#Home-page0btn-->

				<div id="watch-intro" style="cursor:pointer;">
				<div id="Home-page-video"></div>
						<div id="Home-page-video-title">
							<ul>Watch our intro video</ul> 
							<ul>on how it works</ul>
					</div>	
				</div>				

				<div class="scroll-down"></div>	
			</div><!-- end.center-->
			<div class="Home-page-learn-more tipsy-tipsy" title="Start Here"><%= image_tag("starthere.png") %></div>
			<script>
				$('.Home-page-learn-more').click(function(){
					$('html, body').animate({
        				scrollTop: $("#scroll-anchor").offset().top - 148
    				});
				});
				$('#Home-page-video-click').click(function(){
					$('html, body').animate({
        				scrollTop: $("#scroll-anchor").offset().top - 148
    				});
				});				
			</script>

		</section><!-- end.first window -->
	</div><!-- end:.wrapper -->	

		<!-- Window 2 -->
		<section class="window" id="window2">
			<div class="center" style="margin: 0 auto;width:1089px;">
				<%= render 'layouts/sidebar_home_staffpicks'%>
						<!-- post-content-->
			<!-- Title -->
			<div class="update-title-home" id="scroll-anchor">
				<h1>Staff Picks</h1>
				<ul style="margin-top: -8px;">
					<h5>Ratafire is a crowd-funded monthly patronage platform for non-exclusive creative content.</h5>
				</ul>	
			</div>	
			
			<div class="post-content-home">
				<!-- Activities -->
					<% if @activities.any? %>
						<%= render_activities(@activities) %>
					<% else %>
						<div class="blank-update-box" style="height:428px;">
							<h5>There are no staff picks.</h5>
						</div>						
					<% end %>
				</div><!-- end.post-content-->	
			</div><!-- end.center-->

		</section><!-- end.second window-->	

		<!-- Window 2 -->

		<section class="window" id="window3" >
			<div class="center" style="margin: 0 auto;width:1089px;">
				<div class="Home-page-container2">
					<h2>Post and collaborate on projects</h2>
					<h2>Discover the best in new ideas, art and research</h2>
					<h2>Support projects with monthly subscriptions</h2>
					<h2><%= link_to "Learn more or ⌄", about_path, class:"no_ajaxify"%></h2>
					<%= link_to image_tag("join.jpg"), new_user_registration_path , class: "no_ajaxify tipsy-tipsy", title:"❤"%>
				</div>
			</div><!-- end.center-->

						<!-- Footer -->
						<div style="padding: 0px 20px 18px 0;bottom:0;right:0;position:absolute;">
						<%= render 'layouts/footer' %>
						</div>

		</section><!-- end.second window-->	

<% end %>		

<!--~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~-->
<!-- Page Title -->
<% provide(:title) %>
<!--~~~~~~~~~~~~~~~~~ Page Content ~~~~~~~~~~~~~~~~~-->
<!-- Section 1 -->
<!-- Home Page Video -->
<section class="cover vid-bg fullscreen overlay pt-xs-120">
    <!-- Adjust video height and width -->
    <script>
        var w = $(window).width(), h = $(window).height()  
        $('#video-block video').css({height: ''+h+'',width: ''+w+''})
        $(window).resize(function(){
        var w = $(window).width(), h = $(window).height()  
        $('#video-block video').css({height: ''+h+'',width: ''+w+''})
        })  
    </script>
   
    <!-- Embed Video as Background-->
    <div style="width:initial;" class="overlay-texture">
        <video autoplay loop id="video-background" muted poster="/assets/homepage/park_pool.jpg">
            <source src="//s3.amazonaws.com/Ratafire_production_videos/park_space.mp4" type="video/mp4">
            <source src="//s3.amazonaws.com/Ratafire_production_videos/park_space.webm" type="video/webm">
        </video>
    </div>

    <div class="container v-align-transform">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                <h1><%= t 'views.utilities.menu.back_the_next_top' %><% unless I18n.locale == :zh %>&nbsp<% end %>
                    <div class="slidingVertical">
                          <span class="text-thin"><%= t 'views.utilities.menu.artist' %></span>
                          <span class="text-thin"><%= t 'views.utilities.menu.musician' %></span>
                          <span class="text-thin"><%= t 'views.utilities.menu.game_designer' %></span>
                          <span class="text-thin"><%= t 'views.utilities.menu.writer' %></span>
                          <span class="text-thin"><%= t 'views.utilities.menu.film_maker' %></span>
                          <span class="text-thin"><%= t 'views.utilities.menu.mathematician' %></span>
                          <span class="text-thin"><%= t 'views.utilities.menu.scientist' %></span>
                          <span class="text-thin"><%= t 'views.utilities.menu.scholar' %></span>
                          <span class="text-thin"><%= t 'views.utilities.menu.engineer' %></span>
                    </div>       
                </h1>
                <p class="lead mb40 mb-xs-24 text-thin">
                    <%= t 'views.home.home_description' %>
                </p>
                <!-- Search -->
                <p class="">
                    <span class="input-group pt-7">
                        <input type="text" class="signup-input">
                        <span class="input-group-btn height-30 box-shadow">
                            <span class="btn btn-blue-transparent no-border-radius" type="button" style="width:66px;height:50px;padding-top:7px;">
                                <i class="fa fa-2x fa-search"></i>
                            </span>
                        </span>
                    </span>
                </p>
                <!--
                <%= link_to '#homepage-sign-up' do %>
                    <div class="btn btn-lg btn-join-us">
                    </div>  
                <% end %>-->
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
<!-- Section 2 -->
<!-- Sign Up-->
<section id="homepage-sign-up" class="cover image-bg fullscreen">
    <!-- Starfield Animation -->
    <div class="stars"></div>
    <div class="stars"></div>
    <div class="stars"></div>
    <div class="stars"></div>
    <div class="stars"></div>   
    <!-- Starfield Background -->
    <div class="background-image-holder">
        <%= image_tag('static_pages/starfield_small3.jpg')%>
    </div> 
    <!-- Signup Form Section -->
    <input type="radio" checked id="toggle--signup" name="toggle" class="ghost" />
    <input type="radio" id="toggle--login" name="toggle" class="signup-ghost" />

    <!-- Signup Form -->
    <%= render 'utilities/sessions/signup'%>
    <!-- Login Form -->
    <%= render 'utilities/sessions/login'%>
    <!-- Social Buttons -->
    <% unless I18n.locale == :zh %>
        <div class="signup-social-buttons">
            <div class="btn-social-social btn-social-sm btn-social btn-facebook">
                <i class="fa fa-facebook"></i>
                <%= t 'views.profile.settings.social_media_settings.sign_in_with_facebook' %>
            </div>   
        </div> 
    <% end %>
    <!-- Legal -->
    <div class="signup-legal">
        <a class="signup-text--small signup-text--border-right"><%= t 'views.utilities.menu.terms' %></a>
        <a class="signup-text--small signup-text--border-right"><%= t 'views.utilities.menu.privacy' %></a>
        <a class="signup-text--small"><%= t 'views.profile.settings.account_settings.password_help' %></a>
    </div>   
</section>  
<!-- Footer -->
<%= render 'utilities/footer/full_footer' %>
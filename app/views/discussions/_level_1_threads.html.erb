	<div class="level_1_holder">
		<!-- Poster -->
		<%= render partial: "discussions/discussion_thread_poster", :locals => { :thread => thread } %>

		<h3><i class="fa fa-comment-o"></i><%= link_to thread.title, discussion_thread_show_path(thread.id), class:"no_ajaxify" %></h3>
		
		<!-- Content -->
		<%= sanitize thread.content, tags: %w(p img a pre blockquote h1 h2 h3 h4 h5 ul li) %>

		<!-- Tool Bar -->
		<%= render partial: "discussions/tool_bar", :locals => { :thread => thread } %>

	</div><!-- end.level_1_holder-->

	<!-- Level 2 -->
	<% if thread.level_2 != nil then %>
		<%= render partial: "discussions/level_2_threads", collection: thread.level_2, :as => :thread %>
	<% end %><!-- end if thread.level_2 != nil -->
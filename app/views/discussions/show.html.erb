<!--~~~~~~~~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!-- Page Title -->
	<% provide(:title, @discussion.title) %>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Facebook Open Graph ~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~ Font ~~~~~~~~~~~~~~~~~~~~~~~~-->	
<link href='http://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>	
<!--~~~~~~~~~~~~~~~~~~~~~~~~ Second Header for Messages ~~~~~~~~~~~~~~~~~~~~~~~~-->
	<% content_for(:below_header) do %>
		<%= render 'discussions/discussion_header' %>



	<div class="discussion-content">

		<!-- Poster -->
		<%= render partial: "discussions/discussion_thread_poster", :locals => { :thread => @discussion } %>

		<h1><%= @discussion.title %> <% if @discussion.review_status == "Pending" then %><span style="color:#ddd;">(Pending)</span><% end %></h1>
		
		<!-- Content -->
		<%= sanitize @discussion.content, tags: %w(p img a pre blockquote h1 h2 h3 h4 h5 ul li) %>

		<!-- Tool Bar -->
		<% if discussion_edit(@discussion) then %>
			<%= render partial: "discussions/main_tool_bar", :locals => { :thread => @discussion } %>
		<% end %>	

		<!-- Tags -->
		<div id="majorpost-tags">
			<i class="fa fa-tags"></i> <%= raw @discussion.tag_list.map { |t| link_to t, tag_path(t), class:"no_ajaxify" }.join(' ') %> 
		</div>	

		<!-- Reply -->
		<%= render 'discussions/discussion_reply_form' %>

		<!-- Discussion Threads -->
		<%= render partial: "discussions/level_1_threads", collection: @level_1_threads, :as => :thread %>

	</div><!-- end .post-content-c-->	

	<% end %>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<!-- Page Title -->
	<% provide(:title, @user.fullname) %>

	<!-- Best in Place -->
	<%= render 'shared/best_in_place'%>	

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Sidebar ~~~~~~~~~~~~~~~~~~~~~~~~-->	

	<% content_for(:side_bar) do %>
    	<%= render 'layouts/sidebar_profile' %>
	<% end %>
		
<!--~~~~~~~~~~~~~~~~~~~~~~~~ Messaging ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<%= render 'messages/compose' %>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Page Contents ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<!-- Main Content -->
	<div class="main-content">
		<%= render 'users/social_media_subscription'%>
		<!-- Full Name-->
		<%= render 'shared/fullname'%>

		<!-- Cutter --><ol style="margin-top: -5px;"></ol>

		<!-- Tabs Nav -->
		<%= render 'shared/tabs_nav_subscription' %>

		<!-- Content of Profile -->
		<div class="profile-content">

			<!-- Now/Past -->
			<% if @user.past_subscribers.count != 0 then %>
				<div class="now-past-holder2">
					<%= link_to subscribers_past_path(@user) do %><span class="btn-delete-light-solid" style="position:relative;z-index:1;padding-right:10px;">
						Past
					</span><% end %>	
					<span class="btn-delete-solid" style="position:relative;z-index:2;">
						Now
					</span>
				</div>	
			<% end %><!--end.if user.past_subscribers.count != 0 -->	


			<!-- First Block -->
			<div id="current-subscribers">
				<% if @user.subscribers.count == 0 %>
					<% if user_signed_in? %>
						<% if @user == current_user && @user.subscription_status_initial != "Approved" %>
							<div class="lightbox2" style="text-align: center; border-bottom: 1px solid transparent;">
								<%= image_tag("hint_to_subscribe.png", height: '130')%>
								<h5>Allow others to become your patrons. With their support, you can continue your research or art work collections.</h5>
								<%= link_to goals_subscription_path(@user.id), class:"no_ajaxify" do %><div class="btn btn-medium2 btn-medium-green" style="margin-top:10px;">Accept Patrons</div><% end %>
								<!-- Cutter --><ol style="margin-top: 40px;"></ol>
							</div>									
						<% else %>
							<div class="lightbox2" style="text-align: center; border-bottom: 1px solid transparent;margin-top: -21px;">
								<h5><%= @user.fullname %> does't have a patron. <span style="color:#fff;">(っ◔◡◔)っ ♥</span></h5>
								<!-- Cutter --><ol style="margin-top: 40px;"></ol>
							</div>						
						<% end %><!-- end. @user == current_user -->
					<% else %>
						<div class="lightbox2" style="text-align: center; border-bottom: 1px solid transparent;margin-top: -21px;">
							<h5><%= @user.fullname %> does't have a patron. <span style="color:#fff;">(っ◔◡◔)っ ♥</span></h5>
							<!-- Cutter --><ol style="margin-top: 40px;"></ol>
						</div>
					<% end %><!-- end. if user_signed_in?-->
				<% else %>
					<%= render partial: "subscriptions/current_subscribers", collection: @subscribers, :as => :user %>
				<% end %>				
			</div><!-- end:.current-subscribers-->



			<!-- Pagination -->
			<div id="Profile-page-load-more">
				<% if @user.subscribers.count >32 %><!-- check if pagination exist-->
					<div class="textbox-mini">
						<span><%= will_paginate @subscribers, :param_name => 'subscribers', class:"rata_pagination no_ajaxify" %></span>					
					</div>
				<% else%>
				<!-- Cutter --><ol style="margin-top: 64px;"></ol>
				<% end %>
			</div><!--end:profile-pageload-more -->

		</div><!-- end:.profile-content -->	
									<!-- Footer -->
				<%= render 'layouts/footer' %>
	</div><!-- end:.main-content-->	


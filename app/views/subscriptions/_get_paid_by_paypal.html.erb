<% if @user.paypal_account != nil then %>
	<div class="lightbox4" style="border: 0px solid #ddd;background-color:#f9f9f9; border-radius:5px;padding-top:20px;padding-bottom:27px;min-height:10px;">
		<table class="display">
			<thead>
				<tr>
					<th width="180"><%= @user.paypal_account.email %></th>
					<th width="382"><%= @user.paypal_account.zoneinfo %></th>
					<th><%= link_to 'Refresh',user_omniauth_authorize_path(:paypal), class:"no_ajaxify btn btn-small2 btn-small-blue"%></th>
				</tr>
			</thead>
			<tbody>
			</tbody>
		</table>
	</div>		
<% else %>
	<div style="margin-top:5px;"><%= link_to 'Add PayPal',user_omniauth_authorize_path(:paypal), class:"no_ajaxify btn btn-medium3 btn-medium-blue"%></div>
<% end %>
								<!-- >2 Sub-sus -->
								<%= link_to @project.creator.sub_susers[0].fullname, @project.creator.sub_susers[0], class:"no_ajaxify"%>, <%= link_to @project.creator.sub_susers[1].fullname, @project.creator.sub_susers[1], class:"no_ajaxify"%> and <%= link_to @subscribers_others, subscribers_path(@project.creator), class:"no_ajaxify"%> support <%= link_to @project.creator.fullname, @project.creator, class:"no_ajaxify"%>.
							<% end %>
						<% end %>
					</div>	
					
					<%= render partial: "supports/project_current_subscribers", collection: @project.creator.subscribers, :as => :user %>

					<!-- if User has subscribers-->
					<% if @project.creator.subscribers then %>
						<%= link_to subscribers_path(@project.creator), class:"subscription no_ajaxify" do %>
							<div class="supporter-image" style="background-image:url(/assets/more_subscribers.png);border: 1px solid #ddd;"></div>
						<% end %>	
					<% else %>
						<%= link_to supporters_path(@project.creator), class:"subscription no_ajaxify" do %>
							<div class="supporter-image" style="background-image:url(/assets/more_subscribers.png);border: 1px solid #ddd;"></div>
						<% end %>
					<% end %>
				</div><!-- end .project-subscribed-users-holder-->		
			<% end %>		

		
		
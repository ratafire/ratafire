		<!-- Without Sub-sus-->
			<% unless @project.creator.subscribers.any? then %>
				<div class="sub-sus-holder" style="margin-left:0px;">
					Be the first to subscribe to <%= link_to @project.creator.fullname, @project.creator,class:"no_ajaxify" %>.
				</div>					
			<% else %>
				<div class="project-subscribed-users-holder">
					<!-- With Sub-sus -->
					<!-- 1 Sub-sus -->
					<div class="sub-sus-holder">
						<% if @project.creator.subscribers.count == 1 then %>
							<%= link_to @project.creator.sub_susers[0].fullname, @project.creator.sub_susers[0], class:"no_ajaxify"%> supports <%= link_to @project.creator.fullname, @project.creator, class:"no_ajaxify"%>.
						<% else %>		
							<!-- 2 Sub-sus -->
							<% if @project.creator.subscribers.count == 2 then %>
								<%= link_to @project.creator.sub_susers[0].fullname, @project.creator.sub_susers[0], class:"no_ajaxify"%> and <%= link_to @project.creator.sub_susers[1].fullname, @project.creator.sub_susers[1], class:"no_ajaxify"%> support <%= link_to @project.creator.fullname, @project.creator, class:"no_ajaxify"%>.

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<!-- Page Title -->
	<% provide(:title) %>

	<!-- Best in Place -->
	<%= render 'shared/best_in_place'%>	

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Sidebar ~~~~~~~~~~~~~~~~~~~~~~~~-->


<!--~~~~~~~~~~~~~~~~~~~~~~~~ Page Contents ~~~~~~~~~~~~~~~~~~~~~~~~-->

<html style="background: url(/assets/backgrounds/starmap.jpg) no-repeat center center fixed; 
      -webkit-background-size: cover;
      -moz-background-size: cover;
       -o-background-size: cover;
      background-size: cover;">
		<!-- First Block -->
		<div class="center" style="width: 790px;margin-top:60px;">
			<!-- Post Content -->
			<div class="thankyou-main">
			


				<div class="checkout-holder">
					<%= link_to @subscribed, class:"no_ajaxify" do %>
						<div class="majorpost-usericon" style="background-image:url(<%= @subscribed.profilephoto.url(:small64) %>);"></div>
					<% end %>						
					<div class="price-name-holder">
						<div style="font-size:2em;color:#666666;font-family:Open Sans;">Thank you! You have subscribed to <%= link_to @subscribed.first_name,@user,class:"no_ajaxify" %>.</div>
					</div>						
					<h2 style="color:#999;margin-top:40px;">Share with your friends</h2>
						<div style="clear:right;">
							<%= render :partial => "users/social_media_partial", :locals => {:user => @subscribed} %>
						</div>	 
				
				<% if @subscriber.need_username == true then %>
					<h2 style="color:#999;margin-top:60px;">Please complete your account info in order to manage your subscription</h2>
					<%= form_for(@subscriber, :validate => true, :html => { :class => 'no_ajaxify'}) do |f| %>
						<%= f.hidden_field :uuid %>
						<%= f.hidden_field :need_username, :value => false %>
						<ol>
							<%= f.text_field :username, class: "inputbox signupbox",  placeholder: "Pick a username",style:"margin-left:-40px;margin-top:0px;", :value => nil%>
						</ol>					
						<ol>
							<%= f.password_field :password, class: "inputbox signupbox", placeholder: "Create a Password",style:"margin-left:-40px;" %>
						</ol>
						<ol style="margin-top: 15px; padding-left: 114px;">
							<%= f.submit "Enter", class: "btn-submit btn-submit-small btn btn-small2 btn-small-green", id:"email-signup" %>
						</ol>								
					<% end %>
				<% else %>
					<div style="margin: 80px 0px 0 0; text-align:right;">
						<%= link_to subscribers_path(@subscribed.id), class:"no_ajaxify" do %>
							<div class="btn btn-medium2 btn-medium-blue no_ajaxify" id="next_step_checkout">
								Back to Ratafire
							</div>
						<% end %>	
					</div>	
				<% end %>	
				</div><!-- end #Amazon Payments Case-->	
			</div><!-- end:.archive-case-majorpost-->
						<%= render 'layouts/footer' %>
		</div><!-- end:.post-content-->	
</html>			
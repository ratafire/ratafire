<div class="user-why-edit" style="padding-bottom:0px;">
	<h4>I am currently working on</h4>
</div>
<% if @project != nil then %>
	<%=  render "projects/project_portable"%>
<% else %>
	<% if @user.facebookpages.first != nil  then %>
		<%=  render "facebookpages/facebookpages_portable", :facebookpage => @user.facebookpages.first %>
	<% end %>	
<% end %>	
<div class="user-why-edit">

	<h4>If I reach my goal</h4>
	<div class="user-why-passage">
		<div class="goals" style="width:100%;font-family:'Open Sans';">
			<ol id="green"><span class="tipsy-tipsy" title="<%= goals_percentage(@user.subscription_amount.to_i, @user.goals_monthly)%>"></span> <%= goals_percentage(@user.subscription_amount.to_i, @user.goals_monthly)%> of <span style="background-color:#72aa35;color:#ffffff;border-radius:5px;padding: 0 5px 0 5px;">$<%= render :text => @user.goals_monthly%></span> per month</ol>
			<ol><%= progress_bar(goals_count(@user.subscription_amount.to_i, @user.goals_monthly), :color => 'green', :rounded => true) %></ol>
		</div>	
	</div>	
	<h4>I will be able to continue this work collection</h4>
		<div class="user-why-passage">
			<%= render 'subscriptions/faces_portable', :user => @user %>	
		</div>	

		<% if @project != nil then %>
			<% if @project.collectible != nil then %>
			<h4>Collectibles for Patrons</h4>
			<div class="project-to-subscribers-holder" style="padding:15px 15px 5px 20px;background-color: #f9f9f9;margin-right:4px;margin-left:20px;">
				<span style="font-family:'Open Sans';background-color:#72aa35;color:#ffffff;border-radius:5px;padding: 1px 5px 1px 5px;">$10</span> <div style="margin-top:-15px;"><%= simple_format(@project.collectible) %></div>
			</div><!-- end.project-to-subscribers-holder-->	
			<% end %>
			<% if @project.collectible_20 != nil then %>
				<div class="project-to-subscribers-holder" style="padding:15px 15px 5px 20px;background-color: #f6f6f6;margin-right:4px;margin-left:20px;margin-top:15px;">
					<span style="font-family:'Open Sans';background-color:#72aa35;color:#ffffff;border-radius:5px;padding: 1px 5px 1px 5px;">$20</span> <div style="margin-top:-15px;"><%= simple_format(@project.collectible_20) %></div>
				</div><!-- end.project-to-subscribers-holder-->			
			<% end %>	
			<% if @project.collectible_50 != nil then %>
				<div class="project-to-subscribers-holder" style="padding:15px 15px 5px 20px;background-color: #f3f3f3;margin-right:4px;margin-left:20px;margin-top:15px;">
					<span style="font-family:'Open Sans';background-color:#72aa35;color:#ffffff;border-radius:5px;padding: 1px 5px 1px 5px;">$50</span> <div style="margin-top:-15px;"><%= simple_format(@project.collectible_50) %></div>
				</div><!-- end.project-to-subscribers-holder-->		
			<% end %>	
			<% if @project.collectible_100 != nil then %>
				<div class="project-to-subscribers-holder" style="padding:15px 15px 5px 20px;background-color: #eeeeee;margin-right:4px;margin-left:20px;margin-top:15px;">
					<span style="font-family:'Open Sans';background-color:#72aa35;color:#ffffff;border-radius:5px;padding: 1px 5px 1px 5px;">$100</span> <div style="margin-top:-15px;"><%= simple_format(@project.collectible_100) %></div>
				</div><!-- end.project-to-subscribers-holder-->			
			<% end %>						

		<% else %>
			<% if @user.facebookpages.first != nil  then %>
				<% if @user.facebookpages.first.collectible != nil then %>
				<h4>Collectibles for Patrons</h4>
				<div class="project-to-subscribers-holder" style="padding:15px 15px 5px 20px;background-color: #f9f9f9;margin-right:4px;margin-left:20px;">
					<span style="font-family:'Open Sans';background-color:#72aa35;color:#ffffff;border-radius:5px;padding: 1px 5px 1px 5px;">$10</span> <div style="margin-top:-15px;"><%= simple_format(@user.facebookpages.first.collectible) %></div>
				</div><!-- end.project-to-subscribers-holder-->	
				<% end %>
				<% if @user.facebookpages.first.collectible_20 != nil then %>
					<div class="project-to-subscribers-holder" style="padding:15px 15px 5px 20px;background-color: #f6f6f6;margin-right:4px;margin-left:20px;margin-top:15px;">
						<span style="font-family:'Open Sans';background-color:#72aa35;color:#ffffff;border-radius:5px;padding: 1px 5px 1px 5px;">$20</span> <div style="margin-top:-15px;"><%= simple_format(@user.facebookpages.first.collectible_20) %></div>
					</div><!-- end.project-to-subscribers-holder-->			
				<% end %>	
				<% if @user.facebookpages.first.collectible_50 != nil then %>
					<div class="project-to-subscribers-holder" style="padding:15px 15px 5px 20px;background-color: #f3f3f3;margin-right:4px;margin-left:20px;margin-top:15px;">
						<span style="font-family:'Open Sans';background-color:#72aa35;color:#ffffff;border-radius:5px;padding: 1px 5px 1px 5px;">$50</span> <div style="margin-top:-15px;"><%= simple_format(@user.facebookpages.first.collectible_50) %></div>
					</div><!-- end.project-to-subscribers-holder-->		
				<% end %>	
				<% if @user.facebookpages.first.collectible_100 != nil then %>
					<div class="project-to-subscribers-holder" style="padding:15px 15px 5px 20px;background-color: #eeeeee;margin-right:4px;margin-left:20px;margin-top:15px;">
						<span style="font-family:'Open Sans';background-color:#72aa35;color:#ffffff;border-radius:5px;padding: 1px 5px 1px 5px;">$100</span> <div style="margin-top:-15px;"><%= simple_format(@user.facebookpages.first.collectible_100) %></div>
					</div><!-- end.project-to-subscribers-holder-->			
				<% end %>				

			<% end %>	
		<% end %>	

		<% if current_user == nil then %>
			<div style="margin: 15px -2px 0 580px;">
				<%= render 'users/portable_subscribe_button'%>
			</div>			
		<% else %>
			<% if current_user == @user then %>
			<% else %>
				<% if current_user.subscribed_by?(@user) then %>
				<% else %>
					<% if @user.subscribed_by?(current_user) then %>
					<% else %>
						<div style="margin: 15px -2px 0 580px;">
							<%= render 'users/portable_subscribe_button'%>
						</div>							
					<% end %>
				<% end %>
			<% end %>
		<% end %>

</div>
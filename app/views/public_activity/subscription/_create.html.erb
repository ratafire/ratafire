<div class="lightbox" id="<%= activity.id %>activity">
	<div class="textbox3">
		<!-- Subscriber icon holder -->
		<%= link_to activity.trackable.subscriber, class:"no_ajaxify" do %>
			<div class="majorpost-usericon" style="background-image:url(<%= activity.trackable.subscriber.profilephoto.url(:small64) %>);">
			</div>	
		<% end %>
		<!-- Subscriber Holder -->
		<div class="subscriber-activity-holder">
			<h2><%= link_to activity.trackable.subscriber.fullname,activity.trackable.subscriber, class:"no_ajaxify" %></h2>
			<ul>subscribed to</ul>
			<ul>with $<%= activity.trackable.amount %>/m</ul>
		</div><!-- end.subscriber-activity-holder-->	
		<!-- Subscribed icon holder -->
		<%= link_to activity.trackable.subscribed, class:"no_ajaxify" do %>
			<div class="subscribed-icon-holder" style="background-image:url(<%= activity.trackable.subscribed.profilephoto.url(:small64) %>)">
			</div>
		<% end %>	
		<!-- Subscribed Holder -->
		<div class="subscribed-activity-holder">
			<h2><%= link_to activity.trackable.subscribed.fullname,activity.trackable.subscribed, class:"no_ajaxify" %></h2>
			<ul>for project <span><%= link_to subscription_project(activity.trackable.project_id).title,user_project_path(subscription_project(activity.trackable.project_id).creator,subscription_project(activity.trackable.project_id)),class:"no_ajaxify" %></span></ul>
			<ol><%= time_ago_in_words(activity.trackable.created_at) %> ago.</ol>
		</div>
	</div><!-- end.textbox3-->
</div><!-- end.lightbox -->	
<% if activity.trackable.video != nil then %>
	<% if activity.trackable.video.external != "" && activity.trackable.video.external != nil %>
		<% if activity.trackable.video.youtube_vimeo == true %>
			<!-- Youtube Video -->
			<script>
				$(document).ready(function() {
					//Uploaded video click to play
					$("#<%= activity.id%>video-small").click(
						function () {
							$("#<%= activity.id%>holder").hide();
							$("#<%= activity.id%>video-expanded").show();
							callPlayer("<%= activity.id%>video","playVideo");
					});	
				});	
			</script>
		<% else %>
			<!-- Vimeo Video -->
			<script src="http://a.vimeocdn.com/js/froogaloop2.min.js"></script>
			<script>
				$(document).ready(function() {
		 			var iframe = $('#<%= activity.id%>video')[0];
	    			var player = $f(iframe);

					//Uploaded video click to play
					$("#<%= activity.id%>video-small").click(
					function () {
						$("#<%= activity.id%>holder").hide();
						$("#<%= activity.id%>video-expanded").show();
						player.api("play");
					});				
				});	
			</script>
		<% end %>
	<% else %>
		<!-- Internal Video -->
			<script>
				$(document).ready(function() {
					//Uploaded video click to play
					$("#<%= activity.id%>video-small").click(
						function () {
							$("#<%= activity.id%>holder").hide();
							$("#<%= activity.id%>video-expanded").show();
							var myPlayer = videojs("#<%= activity.id%>video");
							myPlayer.play();
					});	
				});	
			</script>
	<% end %>	
<% end %>


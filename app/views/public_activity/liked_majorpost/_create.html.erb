<div class="lightbox" id="<%= activity.id %>activity">
	<div class="textbox3">
		<!-- Subscriber icon holder -->
		<%= link_to activity.trackable.user, class:"no_ajaxify" do %>
			<div class="majorpost-usericon" style="background-image:url(<%= activity.trackable.user.profilephoto.url(:small64) %>);">
			</div>	
		<% end %>
		<!-- Subscriber Holder -->
		<div class="subscriber-activity-holder">
			<h2><%= link_to activity.trackable.user.first_name,activity.trackable.user, class:"no_ajaxify" %></h2>
			<ul>recommended</ul>
			<%= image_tag("/assets/create_social_rec.png")%>
		</div><!-- end.subscriber-activity-holder-->	
		<!-- Subscribed icon holder -->
		<%= link_to user_project_majorpost_path(activity.trackable.majorpost.project.creator,activity.trackable.majorpost.project, activity.trackable.majorpost), class:"no_ajaxify" do %>
				<div class="subscribed-icon-holder"  style="background-image:url(<%= activity.trackable.majorpost.user.profilephoto.url(:small64) %>)">
				</div>				
		<% end %>	
		<!-- Subscribed Holder -->
		<div class="subscribed-activity-holder">
			<h2><%= link_to activity.trackable.majorpost.title,user_project_majorpost_path(activity.trackable.majorpost.project.creator,activity.trackable.majorpost.project, activity.trackable.majorpost), class:"no_ajaxify" %></h2>
			<ul>posted by <span><%= link_to activity.trackable.majorpost.user.first_name,activity.trackable.majorpost.project.creator,class:"no_ajaxify" %></span> at project <span><%= link_to truncate(activity.trackable.majorpost.project.title, :length => 50),user_project_path(activity.trackable.majorpost.project.creator, activity.trackable.majorpost.project),class:"no_ajaxify" %></span></ul>
			<ol><%= time_ago_in_words(activity.trackable.created_at) %> ago.</ol>
		</div>
	</div><!-- end.textbox3-->
</div><!-- end.lightbox -->	
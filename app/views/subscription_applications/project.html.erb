<!--~~~~~~~~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<!-- Page Title -->
	<% provide(:title, "Setup Subscription") %>

	<%= render 'shared/progress_bar_hover'%><!-- script -->

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Second Header for Projects ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<% content_for(:second_header) do %>
    	<%= render 'subscription_applications/header' %>
	<% end %>	

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Sidebar ~~~~~~~~~~~~~~~~~~~~~~~~-->	

	<% content_for(:side_bar) do %>
    	<%= render 'subscription_applications/sidebar_application_project' %>
	<% end %>
<!--~~~~~~~~~~~~~~~~~~~~~~~~ Main ~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!-- Main Content -->
	<div class="main-content-project">		
		<!-- Post Content -->
		<div class="post-content">

			<!-- About Title -->
			<div class="post-about-bg">
				<div class="textbox-mini">
					<div class="post-about-title">
						<li style="font-size: 1.4em;">A Current Work Collection or a Facebook Page</li>
					</div>
				</div>
			</div>

			<div class="textbox-mini">
				<%= form_for(@subscription_application,:validate => true,:url => update_subscription_application_path(@user,@subscription_application),:html => {:class => "no_ajaxify", :id => "subscription_application_form"}) do |f| %>
					<%= f.hidden_field :step, :value => 3, id:"step_id" %>
					
						<div class="user-why-passage">
							<!-- With a Project -->
							<% if @project then %>
								<%= f.hidden_field :project_id, :value => @project.id %>
								<ol style="margin-bottom: 10px;margin-top:20px;"><%=  render "projects/project_one_application"%></ol>
								<h4>Work Collection Collectible</h4>
								<ol style="margin:-10px 20px 10px 0;">Enter a collectible for subscribers who paid $10/m or more to you since this work collection. </ol>
								<%= f.text_area :collectible, class: "subscription-plan-input noResize", style:"width:91%;",placeholder:"We suggest you make the project collectible a memorable item, for example, a hand written thank-you note, a signed CD, an extra short story, education materials, or a small signed print. A special hand written thank-you note goes a long way (10 - 500 characters)." %>
							<% else %>	
							<!-- Without a Project -->
								<% if @user.facebookpages.first != nil then %>
								<!-- With a Facebook Page -->
									<%= f.hidden_field :facebookpage_id, :value => @user.facebookpages.first.id %>
									<ol style="margin-bottom: 10px;margin-top:20px;"><%=  render "facebookpages/facebookpage_one_application", facebookpage: @user.facebookpages.first %></ol>
									<h4>Collectible</h4>
									<ol style="margin:-10px 20px 10px 0;">Enter a collectible for subscribers who paid $10/m or more to you for this Facebook Page. </ol>
									<%= f.text_area :collectible, class: "subscription-plan-input noResize", style:"width:91%;",placeholder:"We suggest you make the project collectible a memorable item, for example, a hand written thank-you note, a signed CD, an extra short story, education materials, or a small signed print. A special hand written thank-you note goes a long way (10 - 500 characters)." %>
								<% else %>
									<% if @subscription_application.facebookpage_clicked == true then %>
										<ol style="margin-bottom: 10px;margin-top:20px;">Sync at least one Facebook Page.</ol>
										<%= render partial: "users/facebook_page", collection:  @user.facebook_pages, :as => :page %>
									<% else %>
										<ol style="margin-bottom: 10px;margin-top:20px;">You need to have at least one on going work collection or a synced facebook page to setup subscription.</ol>
										<%= render 'subscription_applications/add_project_and_facebook', :user => @user %>
									<% end %>
								<% end %>	
							<% end %>
						</div>
					<!-- Back -->
					<div style="margin: 15px 24px 20px 0; text-align:right;">
						<div class="btn btn-small2 btn-small-white no_ajaxify" id="subscription_application_project_back" >Back</div>
						<!-- Next Step -->	
						<% if @project || @user.facebookpages.first != nil then %>
							<%= f.submit "Next Step", class: "btn-submit btn-submit-small btn btn-small btn-small-green no_ajaxify" %>
						<% else %>
						<% end %>	
					</div>		
				<% end %>		

			</div><!-- end. textbox-mini-->
		</div><!-- end:.post-content2-->
		<%= render 'layouts/footer' %>
	</div><!-- end of main-content -->			
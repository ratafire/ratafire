<!-- Audio -->
<div id="audio-case">

	<!-- If there is an audio, show the audio -->
	<% if @majorpost.audio_id != "" && @majorpost.audio_id != nil %>

		<script type="text/javascript">

        	$(document).ready(function() {

                //hide artwork upload and show artwork
              	$("#audio-upload-case").hide();
              	$('#has-audio-case').show();
                    
        		});
		</script>

		<div id="has-audio-case">
			<% if @majorpost.audio.soundcloud == nil then %>
				<%= render "forms/has_audio"%>
			<% else %>
			<% if majorpost_edit(@audio.majorpost) %>
				<!-- artwork delete button-->
				<div class="btn-edit-right18" id="delete-video">
					<%= link_to 'x',audio_delete_path(@project.creator,@project,@audio),method: :delete,class:"btn-delete no_ajaxify tipsy-tipsy", title:"Delete", :confirm => "Are you sure to delete this track?" %>
				</div>
			<% end %>
				<%= render 'majorposts/soundcloud_holder'%>
			<% end %>
		</div><!-- end:#has-video-case -->	

	<% end %><!-- end. if @project.audio_id != ""-->

	<div id="audio-upload-case">
		<div id="comment-input2" style="margin: 0px 0 8px 0;height:195px;">
			<!-- Audio Upload Title -->
			<div class="majorpost-user-inspirer-tite">	
				<li>Major Post Audio</li>
			</div>		

			<!-- Upload-->
			<div class="majorpost-user-inspirer-indicator">Upload</div>
				<div class="video-upload-box-holder">
					<!-- Audio Upload-box -->
					<div id="audio-upload-box">
						<div class="video-upload-words artwork-button fileinput-button" id="audio-drop">

							<span>Click to choose an audio file</span>
								<ul>Maximum size: 512mb. Accepts mp3, m4a.</ul>
									<!-- fields for video -->
									<%= s3_uploader_form callback_url: create_majorpost_audio_path(current_user,@project,@majorpost),
  										id: "s3_uploader_audio",
										callback_param: "audio[direct_upload_url]",
										expiration: 24.hours.from_now.utc.iso8601,
										max_file_size: 512.megabytes,:remote => true do %>
									<%= file_field_tag :file, multiple: false, class:"artwork-choose" %>		
									<% end %>		

						</div><!-- end.video-upload-words-->
					</div><!--end.audio-upload-box -->

					<!-- Video Progress-box-->
					<div id="audio-progress-case"></div><!-- end. Video Progress-box-->
						<script id="template-upload-audio" type="text/x-tmpl">
							<div id="audio-progress-box">
								<div class="video-progress">
									<div id="progress-bar-artwork" class='bar-audio' style="width: 0%">
										<div class="video-progress-words">
											<ul>Uploading audio...</ul>
										</div>
									</div>
								</div>
							</div>
						</script>

						<div id="audiodata"></div>

			  			<!-- External-Video-fields-->
  							<div id="external-video-field">
  								
								<!-- Cutter --><ol style="margin-top:-1px;"></ol>
								<!-- External-Video-input-->
								<div class="majorpost-user-inspirer-holder">
									<div class="btn btn-mini btn-mini-green" style="position:absolute;margin:3px 0 0 597px;">Embed</div>
									<%= form_tag add_external_audio_path, id:"majorpost_audio_upload_form",class:"no_ajaxify" do %>
										<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
										<%= hidden_field_tag :project_id, @project.id %>
										<%= hidden_field_tag :majorpost_id, @majorpost.id %>
										<%= hidden_field_tag :user_id, current_user.id %>
										<%= hidden_field_tag :content_temp, nil,id:"content_temp_audio" %>
										<%= hidden_field_tag :tags_temp,nil,id:"tags_temp_audio" %>										
										<%= text_field_tag "external", nil,class:"user", type:"user-external",style:"width:570px;", placeholder:"Enter SoundCloud link, leave it blank if you upload your track.", id:"external-audio", onchange:"externalAudioOnchange()" %>
									<% end %>	
								</div><!-- end of external video input-->

							</div>								
							
				

			</div><!-- end videoupload box holder-->	
			<div class="majorpost-external-inspirer-indicator">External</div>					
		</div><!-- end#comment-input2-->	
	</div><!-- end#audio-upload-case-->	

</div><!-- end.audio-case-->	
<!--~~~~~~~~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<!-- Page Title -->
	<% provide(:title, @user.fullname) %>

	<!-- Best in Place -->
	<%= render 'shared/best_in_place'%>	

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Facebook Open Graph ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<% content_for :head do %>	
		<%= tag :meta, property: "og:url", content: request.scheme+"://"+request.host+"/"+@user.username %>
		<%= tag :meta, property: "og:title", content: "Ratafire - "+@user.fullname %>
		<%= tag :meta, property: "og:image", content: @user.profilephoto.url(:small) %>
		<%= tag :meta, property: "og:type", content: "website" %>
		<%= tag :meta, property: "og:description", content: @user.bio %>
	<% end %>


<!--~~~~~~~~~~~~~~~~~~~~~~~~ Sidebar ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<% content_for(:side_bar) do %>
    	<%= render 'layouts/sidebar_profile' %>
	<% end %>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Page Contents ~~~~~~~~~~~~~~~~~~~~~~~~-->
	
	<!-- Main Content -->
	<div class="main-content">
		<%= render 'users/social_media'%>
				<div>

					<!-- Full Name -->
					<%= render 'shared/fullname'%>

					<!-- Cutter --><ol style="margin-top: -5px;"></ol>

					<!-- Tabs Nav -->
					
					<!-- Tabs Nav -->
					<% if @user.subscription_status_initial == "Approved" then %>
						<%= render 'shared/tabs_contributions_three'%>
					<% else %>
						<%= render 'shared/tabs_contributions'%>
					<% end %>	

					<!-- Content of Projects -->
					<div class="profile-content">
							
							<!-- Now/Past -->
							<div class="now-past-holder">
								<%= link_to projects_past_path(@user) do %><span class="btn-delete-light-solid" style="position:relative;z-index:1;padding-right:10px;">
									Past
								</span><% end %>	
								<span class="btn-delete-solid" style="position:relative;z-index:2;">
									Now
								</span>
							</div>	

							<!-- Cutter --><ol style="margin-top: 38px;"></ol>
							
								<!-- Current Projects -->
								<div class="current-projects">

									<!-- Indicator -->
									<div class="textbox-mini">
										<li style="font-size: 1.4em;">Current Work Collections</li>
										<li class="counter">[<%= @currentprojects.count %>]</li>
									</div>
									
									<!-- Cutter --><ol style="margin-top: -2px;"></ol>

									<!-- Content -->
									<div id="current-projects">
										<%= render 'users/current_projects'%>
									</div><!-- end of current-projects ajax-->


								</div><!-- end.current-projects-->


								<!-- Discussions -->
								<div class="current-projects">

									<!-- Indicator -->
									<div class="textbox-mini">
										<li style="font-size: 1.4em;">Discussions</li>
										<li class="counter">[<%= @currentdiscussions.count %>]</li>
									</div>
									
									<!-- Cutter --><ol style="margin-top: -2px;"></ol>

									<!-- Content -->
									<div id="current-projects">
										<%= render 'users/current_discussions'%>
									</div><!-- end of current-projects ajax-->


								</div><!-- end.current-projects-->

								<!-- Completed Projects -->
								<div class="completed-projects">

									<!-- Indicator -->
									<div class="textbox-mini">
										<li style="font-size: 1.4em;">Completed Work Collection</li>
										<li class="counter">[<%= @completedprojects.count %>]</li>
									</div>
									
									<!-- Cutter --><ol style="margin-top: -2px;"></ol>

									<!-- Content -->
									<div id="completed-projects">
										<%= render 'users/completed_projects'%>
									</div><!-- end of completed-projects-ajax -->

								</div><!--end.completed-projects -->

								<!-- Cutter --><ol style="height: 80px;"></ol>
							
					<!-- end of profile-content-->
					</div>

				<!-- end of div -->
				</div>
							<!-- Footer -->
				<%= render 'layouts/footer' %>


	<!-- end of main-content-->
	</div>



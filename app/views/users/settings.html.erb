<!-- Page Title -->
<% provide(:title) %>

<!-- Page Content -->
<!DOCTYPE html>
<html >
	<body>
						<div class="textbox">
						
							<h1>Settings</h1>
							<h5>Edit your account settings.</h5>
							<!-- Cutter --><ol style="margin-top: -20px;"></ol>

						<!-- end of textbox-->
						</div>
						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'no_ajaxify' }, :validate => true) do |f| %>	


      					<div class="lightbox2">
							

							<!-- Account Info-->
							<div class="textbox-mini">
							<h2>Username</h2>
							</div>

							<!-- username -->
							<div class="lightbox3">

								<div class="inputlabel">
									<li>Username</li>
								</div>

								<div class="input-placer">
      								<%= f.text_field :username, class: "inputbox settingsinput" %>
      								<ul>Change your username. It will make up the permanent link of your profile page.</ul>

      							</div>

      						</div> 

      						<!-- Current Password -->
      						<div class="lightbox3">
      						
								<div class="inputlabel">
									<li>Current Password</li>
								</div>

      							<div class="input-placer">
      								<%= f.password_field :current_password, class: "inputbox settingsinput"%>
      								<ul>We need your current password to confirm your changes</ul>
      							</div>

      						</div>      
      					
      					<!-- end of lightbox2 -->
						</div>
      															
							
							<ol style="margin-top: 15px; padding-left: 168px;">
							
								<div class="btn btn-medium btn-medium-blue">
									<%= f.submit "Update", class: "btn-submit" %>
								</div>
							</ol>

						<% end %>

				<!-- Cutter --><ol style="margin-top: 70px;"></ol>

						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'no_ajaxify' }, :validate => true) do |f| %>	


      					<div class="lightbox2">
							

							<!-- Account Info-->
							<div class="textbox-mini">
							<h2>Email</h2>
							</div>

							<!-- Email -->
							<div class="lightbox3">

								<div class="inputlabel">
									<li>Email</li>
								</div>

								<div class="input-placer">
      								<%= f.text_field :email, class: "inputbox settingsinput" %>
      								  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    									<ul>Currently waiting confirmation for: <%= resource.unconfirmed_email %></ul>
    									<% else %>
    									<ul>New email address.</ul>
  										<% end %>
      								

      							</div>

      						</div>

      						<!-- Current Password -->
      						<div class="lightbox3">
      						
								<div class="inputlabel">
									<li>Current Password</li>
								</div>

      							<div class="input-placer">
      								<%= f.password_field :current_password, class: "inputbox settingsinput"%>
      								<ul>We need your current password to confirm your changes</ul>
      							</div>

      						</div>      
      					
      					<!-- end of lightbox2 -->
						</div>
      															
							
							<ol style="margin-top: 15px; padding-left: 168px;">
							
								<div class="btn btn-medium btn-medium-blue">
									<%= f.submit "Send Confirmation", class: "btn-submit" %>
								</div>
							</ol>

						<% end %>
				<!-- Cutter --><ol style="margin-top: 70px;"></ol>

						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'no_ajaxify' }, :validate => true) do |f| %>	


      					<div class="lightbox2">
							

							<!-- Account Info-->
							<div class="textbox-mini">
							<h2>Password</h2>
							</div>

      						<!-- Password-->
      						<div class="lightbox3">
      						
								<div class="inputlabel">
									<li>Password</li>
								</div>

      							<div class="input-placer">
      								<%= f.password_field :password, class: "inputbox settingsinput"%>
      								<ul>Leave blank if you don't want to change it</ul>
      							</div>

      						</div>

      						<!-- Password Confirmation -->
      						<div class="lightbox3">
      						
								<div class="inputlabel">
									<li>Re-enter Password</li>
								</div>

      							<div class="input-placer">
      								<%= f.password_field :password_confirmation, class: "inputbox settingsinput"%>
      								<ul>Re-enter your new password.</ul>
      							</div>

      						</div>      

      						<!-- Current Password -->
      						<div class="lightbox3">
      						
								<div class="inputlabel">
									<li>Current Password</li>
								</div>

      							<div class="input-placer">
      								<%= f.password_field :current_password, class: "inputbox settingsinput"%>
      								<ul>We need your current password to confirm your changes</ul>
      							</div>

      						</div>      
      					
      					<!-- end of lightbox2 -->
						</div>
      															
							
							<ol style="margin-top: 15px; padding-left: 168px;">
							
								<div class="btn btn-medium btn-medium-blue">
									<%= f.submit "Save Changes", class: "btn-submit" %>
								</div>
							</ol>

						<% end %>
				<!-- Cutter --><ol style="margin-top: 70px;"></ol>

				      	<div class="lightbox2">
							

							<!-- Account Info-->
							<div class="textbox-mini">
							<h2>Cancel Account</h2>
							</div>

      					
      					<!-- end of lightbox2 -->
						</div>

						<ol style="margin-top: 15px; padding-left: 168px;">
							
									<%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-medium btn-medium-white" %>
							</ol>

	</body>
</html>
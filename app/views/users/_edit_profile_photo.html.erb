												callback_param: "profilephoto[direct_upload_url]",
												expiration: 24.hours.from_now.utc.iso8601,
												max_file_size: 2048.megabytes,:remote => true do %>
												<%= file_field_tag :file, multiple: false, class:"profile-choose" %>		

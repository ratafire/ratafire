						<!-- Edit Photo -->
						<div class="lightbox2-bordered">
							<div class="textbox-mini">

								<!-- Photo -->
								<h2>Photo</h2>

									<div id="image-placer">
									<li><%= image_tag(@user.profilephoto.url(:medium), class: "tipsy-tipsy sidebar-profile-shade", title: "Large Profile Photo") %></li>
									<li><%= image_tag(@user.profilephoto.url(:small), class: "image-wrap tipsy-tipsy sidebar-profile-shade", title: "Small Profile Photo") %></li>
									<li>
										<% if @user.profilephoto? %><%= link_to "x", photo_delete_path(@user), method: :delete, title:"Remove",class:"no_ajaxify btn-delete tipsy-tipsy" %><% end %>
									</li>
									<% unless @user.profilephoto? %>
									<li>

										<!-- Cutter --><ol style="margin-top: 10px;"></ol>

										<span class="btn btn-medium2 btn-medium-blue fileinput-button">Upload

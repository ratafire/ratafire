<!--~~~~~~~~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!-- Page Title -->
	<% provide(:title, @user.fullname) %>

	<!-- Open and Close -->
	<%= render 'shared/profile_open_close'%><!-- script -->

	<!-- Best in Place -->
	<%= render 'shared/best_in_place'%>

	<!-- Page Specific JS -->
	<%= render 'users/showjs' %>

	

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Facebook Open Graph ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<% content_for :head do %>	
		<%= tag :meta, property: "og:url", content: request.scheme+"://"+request.host+"/"+@user.username %>
		<%= tag :meta, property: "og:title", content: "Ratafire - "+@user.fullname %>
		<%= tag :meta, property: "og:image", content: @user.profilephoto.url(:small) %>
		<%= tag :meta, property: "og:type", content: "website" %>
		<%= tag :meta, property: "og:description", content: @user.bio %>
	<% end %>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Sidebar ~~~~~~~~~~~~~~~~~~~~~~~~-->	

	<% content_for(:side_bar) do %>
    	<%= render 'layouts/sidebar_profile' %>
	<% end %>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Page Contents ~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!-- Main Content -->
	<div class="main-content">
<!--~~~~~~~~~~~~~~~~~~~~~~~~ Tutorial ~~~~~~~~~~~~~~~~~~~~~~~~-->	
	<%= render 'users/social_media'%>
<!--~~~~~~~~~~~~~~~~~~~~~~~~ Tutorial ~~~~~~~~~~~~~~~~~~~~~~~~-->		

					<!-- Full Name -->
					<%= render 'shared/fullname'%>

					<!-- Cutter --><ol style="margin-top: -5px;"></ol>

					<!-- Tabs Nav -->
					<%= render 'shared/tabs_nav'%>

					<!-- Content of Profile -->
					<div class="profile-content">

							<!-- First Block -->
							<div class="textbox" Style="margin-top: 25px;">

								<!-- About Except -->
								<div id="Profile-page-about-except">
									
										<% if @user.bio.blank? %>
										<div id="bio-blank" style="width:342px;height: 400px;">
											<% if @user == current_user %>
											<div class="btn-edit-right2">
												<div class="btn-edit-right12" id="bio-edit-case">
													<%= link_to "Edit", edit_bio_path(current_user), :method => :delete, class:"btn-delete no_ajaxify" %>
												</div>
											</div>	
											<% end %>
											<ol style="color: #cccccc; margin-top: 20px; text-align: center;">About <%= @user.fullname %></ol>
											<div id="About-fire"></div>
										</div>
										<% else %>
											<ul><!--<%= sanitize simple_format(@user.bio).html_safe%>-->
												<% if @user == current_user %>
													<%= best_in_place @user, :bio, :classes =>"best_user_bio", :type => "textarea" %> <span class="btn btn-edit" id="best_user_bio-edit" style="display:none;"></span>
												<% else %>
													<div class="best_user_bio"><%= @user.bio_html %></div> 
												<% end %>
											</ul>

											<!-- Location -->
											<% if @user.location.blank?%>
											<% else %>
												<div class="Sidebar-location-holder">
													<div class="btn-location">
													</div>
													<div class="Sidebar-location">
														<%= sanitize @user.location %>
													</div>
												</div>				
											<% end %>


										<% end %>
										
								</div>

								<!-- Cutter -->
								<div class="radius" id="cutter"></div>

								<!-- Goals -->
								<div id="Profile-page-goals">

									<h2 class="lightgrey">Goals</h2>

									<% if current_user?(@user)%>
										<%= link_to goals_path, class:"edit-goals tipsy-tipsy-sw no_ajaxify", title:"Click to Edit Goals" do %>
											<!-- Goals-->
											<%= render "users/show_goals"%>
										<% end %>
									<% else %>	
											<!-- Goals-->
											<%= render "users/show_goals"%>									
									<% end %>	

								</div><!-- end #Profile-page-goals-->

							<!-- end of textbox -->	
							</div>

							<!-- Second Block -->

							<!-- Cutter --><ol style="margin-top: -15px;"></ol>
							
								<!-- Activities -->
								<div>

									<!-- Indicator -->
									<div id="Profile-page-title">
										<div class="textbox-mini">
											<div id="open-recent-major-post" class="water-open"></div>
	
												<div id="close-recent-major-post" class="water-close"></div>
										</div>
									</div>
									<!-- Cutter --><ol style="margin-top: -2px;"></ol>

									<!-- Content -->
									<div id="recent-majorposts">
										<% if @activities.any? %>
											<%= render_activities(@activities) %>
										<% else %>
											<div class="lightbox" style="text-align: center;border:0;margin-bottom:-130px;">
												<h5><%= @user.fullname %> does't have activities.</h5>
											</div>
										<% end %>
									<!-- Pagination -->
									<div id="profile-paginate">
										<div class="textbox-mini">
											<span><%= will_paginate @activities, :param_name => 'activities', class:"rata_pagination" %></span>	
										</div>
									</div>
									</div><!-- end of activities-->

									
								<!-- end of Recent Major Posts -->	
								</div>

								<!-- Cutter --><ol id="profile-cutter-bottom" style="height: 130px;"></ol>
							
					<!-- end of profile-content-->
					</div>

					<!-- Back to Top 
					<div id="back-top">
						<div href="#top" class="no_ajaxify"><span></span></div>
					</div>	-->	
				<!-- Footer -->
				<%= render 'layouts/footer' %>

	<!-- end of main-content-->
	</div>


<% if @read_more %>
	$('#<%= @majorpost.id %>_read_all_button').remove();
	$('#<%= @majorpost.id %>_panel_footer').prepend("<%= j render(:partial => 'content/majorposts/majorpost_comment_btn', locals: {majorpost: @majorpost}) %>");
	$('#<%= @majorpost.id %>_update_holder').remove();
	$('#<%= @majorpost.id %>_content_holder').remove();	
	$('#<%= @majorpost.id %>_update_holder_read_all').append("<%= j render(:partial => 'content/majorposts/majorpost_read_more', locals: {majorpost: @majorpost}) %>");
	$('#<%= @majorpost.id %>_holder').velocity('scroll',{
		duration:500,
		offset:-80,
		easing:'ease-in-out'
	});	
	initiate_plugins();
<% else %>
	window.location.href = '<%= new_user_payment_backs_path(@majorpost.user.uid, majorpost_id: @majorpost.id, keystone: "true") %>';
<% end %>
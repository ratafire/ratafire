<%= form_for [user,:admin, tag], url: user_admin_tags_path(user,tag) do |f| %>
    <%= f.hidden_field :taggings, value: 0 %>
    <!-- Quote -->
    <div class="form-group">
        <label><%= t 'views.admin.content.tags.tag_name' %></label>
        <%= f.text_field :name, class:"no-resize input-sm form-control"%>
    </div>
    <!-- Author -->
    <div class="form-group">
        <label><%= t 'views.admin.content.tags.description' %></label>
        <%= f.text_area :description, class:"input-sm form-control"%>
    </div>
    <!-- Source -->
    <div class="form-group">
        <label><%= t 'views.utilities.editor.image' %></label>
        <%= f.file_field :image, class:"input-sm form-control file-styled", type:"file"%>
    </div>
    <!-- Cancel -->
    <%= link_to user_admin_tags_path(current_user.id) do %>
        <div class="btn btn-sm bg-green"><%= t 'views.utilities.editor.cancel' %></div>
    <% end %>    
    <!-- Submit -->
    <%= f.submit t('views.utilities.editor.submit_btn'), class: "btn btn-sm bg-blue", id:"editor-submition" %>
<% end %>
<script type="text/javascript">
    // Default file input style
    $(".file-styled").uniform({
        fileButtonClass: 'action btn btn-blue'
    });    
</script>
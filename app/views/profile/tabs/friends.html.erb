<!--~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~-->
<!-- Page Title -->
<% provide(:title, @user.preferred_name) %>
<!-- Sidebar -->
<% content_for :sidebar do %>
	<% if user_signed_in? %>
		<!-- Signed-in Users-->
		<%= render 'utilities/sidebar/sidebar_profile_signed_in_users'%>
	<% else %>
		<!-- Not signed-in Users-->	
    	<%= render 'utilities/sidebar/sidebar_profile_not_signed_in_users'%>
    <% end %>
<% end %>
<!--~~~~~~~~~~~~~~~~~ Page Content ~~~~~~~~~~~~~~~~~-->
<!-- Cover area -->
<%= render partial:'profile/components/cover', locals: {user: @user} %>
<!-- Toolbar -->
<%= render partial:'profile/components/toolbar', locals: {user: @user}%>
<!-- Content Area -->
<div class="content" >
	<!-- Updates -->
	<div class="row" id="updates-area">
		<!-- Feed Area -->
		<!-- Updates -->
		<div class="col-xs-12 col-md-12" id="updates-main-area">
			<div id="friends-pagination">
				<%= render :partial => 'profile/components/tab_friends', collection: @contacts, :as => :user %>
			</div>
			<div class="friends-pagination">
				<div id="friend-pagination-old">
					<%= will_paginate(@contacts) %>
				</div>
			</div>
		</div>
	</div><!-- end #updates_area-->	
</div><!-- end .content-->
<!--~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~-->
<!-- Page Title -->
<% provide(:title, @user.preferred_name) %>
<!-- Page Specific JS -->

<!--~~~~~~~~~~~~~~~~~ Page Content ~~~~~~~~~~~~~~~~~-->
	<!-- Cover area -->
	<%= render partial:'profile/components/cover', locals: {user: @user} %>
	<!-- Toolbar -->
	<%= render partial:'profile/components/toolbar', locals: {user: @user}%>
	<!-- Content Area -->
	<div class="content" >
		<!-- Pledge Area -->
		<% unless @user.active_campaign %>
			<%= render partial:'profile/components/pledge_area' %>
		<% end %>
		<!-- Updates -->
		<div class="row" id="updates-area">
			<!-- Feed Area -->
			<!-- Updates -->
			<div class="col-xs-12 col-md-8" id="updates-main-area">
				<div class="tabbable">
					<div class="tab-content">
						<!-- Updates -->
						<div class="tab-pane fade in active" id="updates">
							<!-- editor -->
							<% if current_user == @user || current_user.try(:admin) %>
								<%= render partial:'utilities/editor/editor', locals: {user: @user}%>
							<% end %>	
							<!-- Posts -->
							<div id="post-pagination">
								<div class="post-pagination">
									<%= render_activities(@activities) %>
								</div>
								<!-- Paginate -->
								<div class="post-will-paginate">
									<%= will_paginate @activities %>
								</div>
							</div><!-- end #post-pagination-->
						</div>	
						<!-- Friends -->
						<div class="tab-pane fade pl-20" id="friends">
							<% if @friends %>
								<div id="friends-pagination">
									<%= render :partial => 'profile/components/tab_friends', collection: @friends, :as => :user %>
								</div>
								<div class="friends-pagination">
									<%= will_paginate @friends, param_name: :friend %>
								</div>
							<% end %>
						</div>	
						<!-- Backers -->
						<div class="tab-pane fade pl-20" id="backers">
							<% if @backers %>
								<div id="backers-pagination">
									<%= render :partial => 'profile/components/tab_friends', collection: @backers, :as => :user %>
								</div>
								<div class="backers-pagination">
									<%= will_paginate @backers, param_name: :backer %>
								</div>
							<% end %>
						</div>	
						<!-- Backed -->
						<div class="tab-pane fade pl-20" id="backed">
							<% if @backeds %>
								<div id="backeds-pagination">
									<%= render :partial => 'profile/components/tab_friends', collection: @backeds, :as => :user %>
								</div>
								<div class="backeds-pagination">
									<%= will_paginate @backeds, param_name: :backed %>
								</div>
							<% end %>
						</div>
					</div><!-- end .tab-content-->	
				</div><!-- end .tabbable-->				
			</div>
			<!-- Side Area -->
			<div class="col-xs-6 col-md-4 pr-40" id="side-area">
				<!-- Backers -->
				<% if @contacts %>
					<%= render partial:'profile/components/contacts', locals: {contacts: @contacts}%>	
				<% end %>
				<!-- About -->
				<%= render partial:'profile/components/about', locals: {user: @user}%>
				<!-- Rewards -->
				<%= render partial:'profile/components/rewards', locals: {user: @user}%>
				<div id="sticker" class="mt-40">
					<!-- Current Goal -->
					<%= render partial:'profile/components/current_goal', locals: {user: @user}%>			
					<!-- Donation Button -->
					<%= render partial:'profile/components/donation_button', locals: {user: @user}%>
				</div><!-- end #sticker -->	
			</div>	
		</div><!-- end #updates_area-->	
	</div><!-- end .content-->
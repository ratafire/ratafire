<div class="usercardcover-overlay"></div>
<div class="usercardcover" style="background-image: url('<%= user.profilecover.image.url(:preview600) %>')"></div>
<img class="usercardavatar animated bounceIn" src="<%= user.profilephoto.image.url(:thumbnail128) %>">
<div class="usercardname animated fadeIn">
    <div class="text-white text-thin text-shadow usercardbio"><%= truncate(user.preferred_name,length: 28) %></div>
    <div class="text-white text-thin text-shadow"><%= truncate(user.tagline, length: 70)%></div>
</div>
<ul class="usercardstats bg-rainbow text-rainbow">
	<!-- First Slot -->
	<% if user.traits.count >= 1 %>
		<li><label><% if I18n.locale == :zh %><%= user.traits.last.zh_cn %><% else %><%= user.traits.last.trait_name %><% end %></label><i class="traits trait-<%= user.traits.last.trait_code %>"></i></li>
	<% else %>
		<li><label><%= t 'views.creator_studio.community.trait.unknown' %></label><i class="traits trait-cloud"></i></li>
	<% end %>
    <!-- Second Slot -->
    <% if user.traits.count >= 2 %>
    	<li><label><% if I18n.locale == :zh %><%= user.traits.last(2)[0].zh_cn %><% else %><%= user.traits.last.trait_name %><% end %></label><i class="traits trait-<%= user.traits.last(2)[0].trait_code %>"></i></li>
    <% else %>
    	<li><label><%= t 'views.creator_studio.community.trait.unknown' %></label><i class="traits trait-27cloud"></i></li>
    <% end %>
    <!-- Third Slot -->
    <% if user.traits.count == 3 %>
    	<li><label><% if I18n.locale == :zh %><%= user.traits.last(3)[0].zh_cn %><% else %><%= user.traits.last.trait_name %><% end %></label><i class="traits trait-<%= user.traits.last(3)[0].trait_code %>"></i></li>
    <% else %>
    	<li><label><%= t 'views.creator_studio.community.trait.unknown' %></label><i class="traits trait-cloud2"></i></li>
    <% end %>
</ul>
<div class="usercarddata bg-rainbow text-size-small btn-group btn-group-justified text-white">
	<%= render partial:'profile/usercard/usercard_buttons', locals: {user: user} %>
</div>

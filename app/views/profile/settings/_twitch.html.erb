<!-- Twitch -->
<div class="panel panel-default panel-default">
	<div class="panel-heading p-20 text-grey text-thin" id="twitch-heading">
		<h4 class="panel-title"><%= t 'views.profile.settings.social_media_settings.twitch' %></h4>
		<span><%= t 'views.profile.settings.social_media_settings.twitch_tagline' %></span>
<% unless user.twitch %>
	<!-- Without Twitch -->
		<div class="heading-elements">
			<%= link_to user_omniauth_authorize_path(:twitch), class:"btn btn-block btn-social btn-twitch mb-10" do %>
			    <span class="fa fa-twitch"></span> <%= t 'views.profile.settings.social_media_settings.connect_with' %><%= t 'views.profile.settings.social_media_settings.twitch' %>
			<% end %>
		</div>
	</div><!-- end panel-heading -->
	<div class="panel-body">
		<%= t 'views.profile.settings.social_media_settings.twitch_description' %>
	</div>
<% else %>
	<!-- With Twitch -->
		<div class="heading-elements" id="twitch-disconnect">
			<%= link_to user_disconnect_path(user,:twitch),remote: true, class:"btn btn-block btn-social btn-default mb-10" do %>
			    <span class="fa fa-twitch fa-twitch-square"></span> <%= t 'views.profile.settings.social_media_settings.disconnect' %>
			<% end %>
		</div>
	</div><!-- end panel-heading-->
	<!-- Twitch Updates -->
	<div class="table-responsive" id="twitch-table">
		<table class="table" data-popup="tooltip" title='<%= t 'views.utilities.tooltip.coming_soon' %>' data-placement="left">
			<tbody>
				<tr class="border-double active">
					<td colspan="2">
						<span class="text-semibold"><%= t 'views.profile.settings.social_media_settings.twitch_channel' %></span>
					</td>
					<td class="col-md-1 col-sm-1 text-center">
						<span class="text-semibold"><%= t 'views.profile.settings.social_media_settings.refresh' %></span>
					</td>
					<td class="col-md-2 col-sm-2 text-center">
						<span class="text-semibold"><%= t 'views.profile.settings.social_media_settings.display_your_stream' %></span>
					</td>
				</tr>
				<tr>
					<td class="col-md-1 col-sm-1">
						<%= link_to user.twitch.link_self, target:"_blank" do %>
							<img src="<%= user.twitch.image %>" class="profile-thumb-holder cover-profilephoto-holder" style="width:52px;height:52px;">
						<% end %>
					</td>
					<td class="col-md-8 col-sm-8">
						<%= link_to user.twitch.name, user.twitch.link_self, target:"_blank", class:"text-grey"%>
					</td>
					<td class="text-center"><i class="fa fa-refresh"></i></td>
					<td class="text-center">
						<input type="checkbox" class="js-switch" disabled="disabled"/>
					</td>
				</tr>
			</tbody>
		</table>
	</div>	
	<!-- Hidden twitch Body -->
	<div class="panel-body" id="twitch-body" style="display:none;">
		<%= t 'views.profile.settings.social_media_settings.twitch_description' %> <span class="label label-default"><%= t 'views.utilities.tooltip.coming_soon' %></span>
	</div>
<% end %>
</div>
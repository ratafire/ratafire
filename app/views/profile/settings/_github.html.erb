<!-- Github -->
<div class="panel panel-default panel-default">
	<div class="panel-heading p-20 text-grey text-thin" id="github-heading">
		<h4 class="panel-title">GitHub</h4>
		<span>Display GitHub info...</span>
<% unless user.github %>
	<!-- Without GitHub -->
		<div class="heading-elements">
			<%= link_to user_omniauth_authorize_path(:github), class:"btn btn-block btn-social btn-github mb-10" do %>
			    <span class="fa fa-github"></span> Connect with GitHub
			<% end %>
		</div>
	</div><!-- end panel-heading-->
	<div class="panel-body">
		I know you pretend to fail the Turing test. <span class="label label-default">Coming Soon</span>
	</div>
<% else %>
	<!-- With github -->
		<div class="heading-elements" id="github-disconnect">
			<%= link_to user_disconnect_path(user,:github),remote: true, class:"btn btn-block btn-social btn-default mb-10" do %>
			    <span class="fa fa-github fa-github-square"></span> Disconnect
			<% end %>
		</div>
	</div><!-- end panel-heading-->
	<!-- Tweet Updates -->
	<div class="table-responsive" id="github-table">
		<table class="table" data-popup="tooltip" title="Refresh, sync are coming soon." data-placement="left">
			<tbody>
				<tr class="border-double active">
					<td colspan="2">
						<span class="text-semibold">GitHub Profile</span>
					</td>
					<td class="col-md-1 col-sm-1 text-center">
						<span class="text-semibold">Refresh</span>
					</td>
					<td class="col-md-2 col-sm-2 text-center">
						<span class="text-semibold">Sync</span>
					</td>
				</tr>
				<tr>
					<td class="col-md-1 col-sm-1">
						<%= link_to user.github.link, target:"_blank" do %>
							<img src="<%= user.github.image %>" class="profile-thumb-holder cover-profilephoto-holder" style="width:52px;height:52px;">
						<% end %>
					</td>
					<td class="col-md-8 col-sm-8">
						<%= link_to user.github.name, user.github.link, target:"_blank", class:"text-grey"%>
					</td>
					<td class="text-center"><i class="fa fa-refresh"></i></td>
					<td class="text-center">
						<input type="checkbox" class="js-switch" disabled="disabled"/>
					</td>
				</tr>
			</tbody>
		</table>
	</div>	
	<!-- Hidden github Body -->
	<div class="panel-body" id="github-body" style="display:none;">
		I know you pretend to fail the Turing test. <span class="label label-default">Coming Soon</span>
	</div>
<% end %>
</div>
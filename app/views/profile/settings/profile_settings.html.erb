<!--~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~-->
<!-- Page Title -->
<% provide(:title, @user.preferred_name) %>
<!-- Sidebar -->
<% content_for :sidebar do %>
	<% if user_signed_in? %>
		<!-- Signed-in Users-->
		<%= render 'utilities/sidebar/sidebar_profile_signed_in_users'%>
	<% else %>
		<!-- Not signed-in Users-->	
    	<%= render 'utilities/sidebar/sidebar_profile_not_signed_in_users'%>
    <% end %>
<% end %>
<!-- Page Specific JS -->
<%= javascript_include_tag 'page_specific/settings', 'data-turbolinks-track' => "reload"  %>
<!--~~~~~~~~~~~~~~~~~ Page Content ~~~~~~~~~~~~~~~~~-->
<!-- Content Area -->
<div class="content">
	<!-- Page title -->
	<%= render partial: "profile/settings/page_header_content", locals: {user: @user} %>

	<!-- Tabs -->
	<div class="tabbable pl-20 pr-20">
		<!-- Nav tabs-->
		<%= render partial: "profile/settings/tabs", locals: {user: @user} %>

		<!-- Tab content -->
		<div class="tab-content">
			<!-- Profile Settings -->
			<%= render partial: "profile/settings/form_profile", locals: {user: @user} %>
			<!-- Social Media Connections -->			
		</div><!-- end .tab-content-->

	</div><!-- end .tabbable-->
</div><!-- end .content-->

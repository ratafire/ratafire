<!-- SoundCloud -->
<div class="panel panel-default panel-default">
	<div class="panel-heading p-20 text-grey text-thin" id="soundcloud-heading">
		<h4 class="panel-title">SoundCloud</h4>
		<span>Display SoundCloud info, update from SoundCloud...</span>
<% unless user.soundcloud_oauth %>
	<!-- Without Soundcloud -->
		<div class="heading-elements">
			<%= link_to user_omniauth_authorize_path(:soundcloud), class:"btn btn-block btn-social btn-soundcloud mb-10" do %>
			    <span class="fa fa-soundcloud"></span> Connect with SoundCloud
			<% end %>
		</div>
	</div><!-- end panel-heading -->
	<div class="panel-body">
		You can sync your SoundCloud updates to Ratafire. Start by connecting with SoundCloud. <span class="label label-default">Coming Soon</span>
	</div>
<% else %>
	<!-- With soundcloud -->
		<div class="heading-elements" id="soundcloud-disconnect">
			<%= link_to user_disconnect_path(user,:soundcloud),remote: true, class:"btn btn-block btn-social btn-default mb-10" do %>
			    <span class="fa fa-soundcloud fa-soundcloud-square"></span> Disconnect
			<% end %>
		</div>
	</div><!-- end panel-heading-->
	<!-- soundcloud Updates -->
	<div class="table-responsive" id="soundcloud-table">
		<table class="table" data-popup="tooltip" title="Refresh, Sync are coming soon." data-placement="left">
			<tbody>
				<tr class="border-double active">
					<td colspan="2">
						<span class="text-semibold">soundcloud Channel</span>
					</td>
					<td class="col-md-1 col-sm-1 text-center">
						<span class="text-semibold">Refresh</span>
					</td>
					<td class="col-md-1 col-sm-1 text-center">
						<span class="text-semibold">Sync</span>
					</td>
					<td class="col-md-2 col-sm-2 text-center">
						<span class="text-semibold">Post to SoundCloud</span>
					</td>
				</tr>
				<tr>
					<td class="col-md-1 col-sm-1">
						<%= link_to user.soundcloud.link, target:"_blank" do %>
							<img src="<%= user.soundcloud.image %>" class="profile-thumb-holder cover-profilephoto-holder" style="width:52px;height:52px;">
						<% end %>
					</td>
					<td class="col-md-7 col-sm-7">
						<%= link_to user.soundcloud.name, user.soundcloud.link, target:"_blank", class:"text-grey"%>
					</td>
					<td class="text-center"><i class="fa fa-refresh"></i></td>
					<td class="text-center">
						<input type="checkbox" class="js-switch" disabled="disabled"/>
					</td>
					<td class="text-center">
						<input type="checkbox" class="js-switch" disabled="disabled"/>
					</td>
				</tr>
			</tbody>
		</table>
	</div>	
	<!-- Hidden soundcloud Body -->
	<div class="panel-body" id="soundcloud-body" style="display:none;">
		You can sync your SoundCloud updates to Ratafire. Start by connecting with SoundCloud. <span class="label label-default">Coming Soon</span>
	</div>
<% end %>
</div>
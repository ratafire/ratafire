<!-- Facebook -->
<div class="panel panel-default panel-default">
	<div class="panel-heading p-20 text-grey text-thin">
		<h4 class="panel-title">Facebook</h4>
		<span>Use Facebook info, update from Facebook, display Facebook friends...</span>
<% unless user.facebook %>
	<!-- Without Facebook -->
		<div class="heading-elements">
			<a class="btn btn-block btn-social btn-facebook mb-10">
			    <span class="fa fa-facebook"></span> Connect with Facebook
			</a>
		</div>
	</div><!-- end panel-heading-->
	<div class="panel-body">
		You can sync your Facebook creator page's updates to Ratafire. Start by connecting with Facebook. <span class="label label-default">Coming Soon</span>
	</div>
<% else %>
	<!-- With Facebook -->
	</div><!-- end panel-heading-->
	<!-- Post to Facebook -->
	<div class="table-responsive">
		<table class="table" data-popup="tooltip" title="Refresh, post to Facebook are coming soon." data-placement="left">
			<tbody>
				<tr class="border-double active">
					<td colspan="2">
						<span class="text-semibold">Facebook Profile</span>
					</td>
					<td class="col-md-1 col-sm-1 text-center">
						<span class="text-semibold">Refresh</span>
					</td>
					<td class="col-md-2 col-sm-2 text-center">
						<span class="text-semibold">Post to Facebook</span>
					</td>
				</tr>
				<tr>
					<td class="col-md-1 col-sm-1">
						<%= link_to user.facebook.link, target:"_blank" do %>
							<img src="<%= user.facebook.image %>?width=48&height=48" class="profile-thumb-holder cover-profilephoto-holder">
						<% end %>
					</td>
					<td class="col-md-8 col-sm-8">
						<%= link_to user.facebook.name, user.facebook.link, target:"_blank", class:"text-grey"%>
					</td>
					<td class="text-center"><i class="fa fa-refresh"></i></td>
					<td class="text-center">
						<input type="checkbox" class="js-switch" disabled="disabled" />
					</td>
				</tr>
			</tbody>
		</table>
	</div>	
		<% if user.facebook_pages.any? %>
			<!-- With Facebook Pages -->
			<div class="table-responsive">
				<table class="table" data-popup="tooltip" data-popup="tooltip" title="Refresh, sync, post to page are coming soon." data-placement="left">
					<tbody>
						<tr class="border-double active">
							<td colspan="2">
								<span class="text-semibold">Facebook Pages</span>
							</td>
							<td class="col-md-1 col-sm-1 text-center">
								<span class="text-semibold">Refresh</span>
							</td>
							<td class="col-md-1 col-sm-1 text-center">
								<span class="text-semibold">Sync</span>
							</td>
							<td class="col-md-2 col-sm-2 text-center">
								<span class="text-semibold">Post to Page</span>
							</td>
						</tr>
						<%= render partial: "profile/settings/facebook_page", collection:  user.facebook_pages, :as => :page %>
					</tbody>
				</table>
			</div>
		<% else %>
			<!-- Without Facebook Pages -->
			<div class="table-responsive">
				<table class="table">
					<tbody>
						<tr class="border-double active">
							<td class="col-md-2 col-sm-2">
								<span class="text-semibold">Facebook Pages</span>
							</td>
							<td class="col-md-8 col-sm-8">
								<span class="text-semibold">You can sync your Facebook creator page's updates to Ratafire.</span>
							</td>
							<td class="col-md-2 col-sm-2 text-center">
								<a class="btn btn-block btn-social btn-facebook mb-10">
								    <span class="fa fa-facebook"></span> Add Facebook Pages
								</a>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		<% end %>
<% end %>
</div>
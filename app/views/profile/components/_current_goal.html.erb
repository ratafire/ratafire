<div>
	<h2 class="mt-40 mb-20"><i class="ti-announcement mr-15"></i><%= user.active_reward.goal_title %> <span class="label label-default"><%= t 'views.utilities.menu.current_goal' %></span></h2>
	<!-- Countdown Script -->
	<div class="countdown" id="counter-wrapper">
		<!-- Days -->
		<div class="countdown_section_wrapper">
			<div class="countdown_section">
				<div class="countdown_amount days">00</div>
				<div class="countdown_day"><span class="label label-blue"><%= t 'views.utilities.menu.days_to_go' %></span></div>
			</div>	
		</div>	
		<!-- Hours -->
		<div class="countdown_section_wrapper">
			<div class="countdown_section">
				<div class="countdown_amount hours">00</div>
				<div class="countdown_day"><%= t 'views.utilities.menu.hrs' %></div>
			</div>	
		</div>	
		<!-- Min -->
		<div class="countdown_section_wrapper">
			<div class="countdown_section">
				<div class="countdown_amount minutes">00</div>
				<div class="countdown_day"><%= t 'views.utilities.menu.min' %></div>
			</div>	
		</div>	
		<!-- Sec -->
		<div class="countdown_section_wrapper">
			<div class="countdown_section">
			<div class="countdown_section">
				<div class="countdown_amount seconds">00</div>
				<div class="countdown_day"><%= t 'views.utilities.menu.sec' %></div>
			</div>	
		</div>		
	</div><!-- end. counter-wrapper -->
	<!-- Countdown Timer Script -->
	<script class="source" type="text/javascript">
	        $('.countdown').downCount({
	            date: '<%= user.active_reward.due.strftime('%m/%d/%Y %T') %>'
	        });
	</script> 
</div>
<!-- Progress Bar -->
<div class="progress" style="height:40px;border-radius:5px;clear:both;" data-popup="tooltip" title="20% <%= t 'views.utilities.menu.of' %> $500" data-placement="top">

	<div class="progress-bar progress-bar-blue progress-bar-striped active" style="width: 20%;padding:12px;overflow:hidden;"  >
		<span style="font-size:1.8em;white-space: nowrap;">20% <%= t 'views.utilities.menu.of' %> $500</span>
	</div>
</div>
<div class="mt-20"></div>	
<%= link_to profile_url_path(user.username) do %>
	<% if browser.firefox? %>
		<div class="moz-panel-image usercard <%= @popoverclass %>" data-content='<i class="icon-spinner2 spinner text-grey-200"></i>' data-id="<%= user.uid %>" style="background-image:url(<%= user.profilephoto.image.url(:thumbnail128)%>);" data-placement="left">
			<div class="moz-panel-image-text text-size-mini"><%= user.preferred_name %>
			</div>
		</div>	
	<% else %>
		<div class="panel-image usercard <%= @popoverclass %>" data-content='<i class="icon-spinner2 spinner text-grey-200"></i>' data-id="<%= user.uid %>" style="background-image:url(<%= user.profilephoto.image.url(:thumbnail128)%>);" data-placement="left">
			<div class="panel-image-text text-size-mini"><%= user.preferred_name %>
			</div>
		</div>	
	<% end %>
<% end %>	
<% if user_signed_in? %>
	<% unless current_user == user %>
		<% if user.subscribed_by?(current_user.id) %>
			<%= link_to unsub_user_payment_subscriptions_path(user.uid), method: :delete, data: { confirm: t('views.utilities.btn.are_you_sure_to')+t('views.utilities.btn.unsupport')+'?'} do %>
				<% if I18n.locale == :en %>
					<div class="btn-back-this-creator cursor-pointer" style="background-image: url(/assets/button/btn-backed-waterdrop-en.png);"></div>
				<% end %>
				<% if I18n.locale == :zh %>
					<div class="btn-back-this-creator cursor-pointer" style="background-image: url(/assets/button/btn-backed-waterdrop-zh.png);"></div>
				<% end %>
			<% end %>
		<% else %>
			<% if current_user.subscribed_by?(user.id) %>
				<%= link_to user_payment_subscriptions_path(user.uid), method: :delete, data: { confirm: t('views.utilities.btn.are_you_sure_to')+t('views.utilities.btn.remove_backer')+'?'} do %>
					<% if I18n.locale == :en %>
						<div class="btn-back-this-creator cursor-pointer" style="background-image: url(/assets/button/btn-backer-waterdrop-en.png);"></div>
					<% end %>
					<% if I18n.locale == :zh %>
						<div class="btn-back-this-creator cursor-pointer" style="background-image: url(/assets/button/btn-backer-waterdrop-zh.png);"></div>
					<% end %>
				<% end %>
			<% else %>
				<% if user.active_reward %>
					<%= link_to new_user_payment_backs_path(user.uid) do %>
						<% if I18n.locale == :en %>
							<div class="btn-back-this-creator cursor-pointer" style="background-image: url(/assets/button/btn-back-this-creator-waterdrop-en.png);"></div>
						<% end %>
						<% if I18n.locale == :zh %>
							<div class="btn-back-this-creator cursor-pointer" style="background-image: url(/assets/button/btn-back-this-creator-waterdrop-zh.png);"></div>
						<% end %>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
<% else %>
	<% if user.active_reward %>
		<%= link_to new_user_payment_backs_path(user.uid) do %>
			<% if I18n.locale == :en %>
				<div class="btn-back-this-creator cursor-pointer" style="background-image: url(/assets/button/btn-back-this-creator-waterdrop-en.png);"></div>
			<% end %>
			<% if I18n.locale == :zh %>
				<div class="btn-back-this-creator cursor-pointer" style="background-image: url(/assets/button/btn-back-this-creator-waterdrop-zh.png);"></div>
			<% end %>
		<% end %>
	<% end %>
<% end %>
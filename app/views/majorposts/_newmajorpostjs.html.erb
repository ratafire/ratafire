<!-- Preset some Value-->
<% if @user.post_to_facebook == true then %>
  <script>
  $(document).ready(function() {
    $('#post-to-facebook').val('t');
  });
  </script>
<% end %>

<% if @user.facebook_pages.first != nil then %>
  <% if @user.facebook_pages.first.post_to_facebook_page == true then %>
  <script>
  $(document).ready(function() {
    $('#post-to-facebookpage').val('t');
  });
  </script>  
  <% end %>
<% end %>

<!-- Show Video When there is a video -->
<% if @majorpost.video != nil then %>
 <script>
  $(document).ready(function() {
    $('#video-case').show();
    $('.redactor_btn_video2').addClass("redactor_act");
  });
 </script> 
<% else %>
  <% if @majorpost.artwork != nil then %>
   <script>
   $(document).ready(function() {
      $('#image-case').toggle();
      $('#original-placer').toggle();
      $('.redactor_btn_image').addClass("redactor_act");
    });
   </script>   
  <% else %>
    <% if @majorpost.audio != nil then %>
      <script>
      $(document).ready(function() {
        $('#audio-case').toggle(); 
        $('.redactor_btn_audio').addClass("redactor_act");
      });  
     </script>      
    <% else %>
      <% if @majorpost.pdf != nil then %>
        <script>
        $(document).ready(function() {
          $('#pdf-case').toggle(); 
          $('.redactor_btn_pdf').addClass("redactor_act");
        });    
       </script> 
      <% end %>
    <% end %>
  <% end %>
<% end %>

<script type="text/javascript">
//let validation work
$(document).ready(function(){
    $('form').on('nested:fieldAdded', function(event) {
    $(event.target).find(':input').enableClientSideValidations();
    });
  
  //best_in_place
  $('.best_in_place').best_in_place();//init

              //script to show delete artwork button
              $('#has-artwork-case').hover(function() {
                  $("#delete-artwork").toggle();
                });
 
               //script to show delete audio button
              $('#has-audio-case').hover(function() {
                  $("#delete-audio").toggle();
                });  

              //script to show delete pdf button
              $('#has-pdf-case').hover(function() {
                  $("#delete-pdf").toggle();
                });                           
                                             

              //publish-button
              $('#majorpost-publish-button').click(function() {
                  $("#project-published").val("t");
                  $("#project-form").submit();
              });

               //Project Post to Facebook
               $('#post-to-facebookpage-button').click(function(){
                $('#post-to-facebookpage-button').hide();
                $('#post-to-facebookpage-button-active').show();
                $('#post-to-facebookpage').val('t');
               });
               $('#post-to-facebookpage-button-active').click(function(){
                $('#post-to-facebookpage-button-active').hide();
                $('#post-to-facebookpage-button').show();
                $('#post-to-facebookpage').val('f');
               });               
               $('#post-to-facebook-button').click(function(){
                $('#post-to-facebook-button').hide();
                $('#post-to-facebook-button-active').show();
                $('#post-to-facebook').val('t');
               });
               $('#post-to-facebook-button-active').click(function(){
                $('#post-to-facebook-button-active').hide();
                $('#post-to-facebook-button').show();
                $('#post-to-facebook').val('f');
               });                   

});


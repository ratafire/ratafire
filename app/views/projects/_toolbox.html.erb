<!-- Facebook SDK-->

<div class="textbox-mini">
							<div class="toolbox">
								<% if user_signed_in? then %>
									<% if @liked_project then %>
									<li>
										<!-- like -->
										<%= link_to like_project_path(@project.id,current_user.id),class:"no_ajaxify",remote: true do %><div class="btn btn-recommand tipsy-tipsy" title="Recommand" id="<%= @project.id%>project-like" style="display:none;">
										</div><% end %>
										<!-- unlike -->
										<%= link_to unlike_project_path(@project.id,current_user.id),class:"no_ajaxify",remote: true do %><div class="btn btn-unrecommand tipsy-tipsy" title="Unrecommand" id="<%= @project.id%>project-unlike">
										</div><% end %>	
									<% else %>
										<!-- like -->
										<%= link_to like_project_path(@project.id,current_user.id),class:"no_ajaxify",remote: true do %><div class="btn btn-recommand tipsy-tipsy" title="Recommand" id="<%= @project.id%>project-like">
										</div><% end %>
										<!-- unlike -->
										<%= link_to unlike_project_path(@project.id,current_user.id),class:"no_ajaxify ",remote: true do %><div class="btn btn-unrecommand tipsy-tipsy" title="Unrecommand" id="<%= @project.id%>project-unlike" style="display:none;">
										</div><% end %>										
									<% end %><!-- end.@liked_project-->
										
								</li>  
								
								<li>
									<!-- Twitter -->
									<div class="btn btn-twitter tipsy-tipsy" title="Tweet">
										<a href="https://twitter.com/share" class="twitter-share-button" data-count="none"></a>
										<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
									</div><!-- end.btn-twitter-->
									<!-- Facebook -->
									<div class="btn btn-facebook tipsy-tipsy" title="Post to Facebook">
										<div class="fb-share-button" data-href="https://www.ratafire.com<%=user_project_path(@project.creator, @project)%>" data-type="icon">
										</div>
									</div><!-- end.btn-facebook-->	
								</li>
								<% else %>
									<li>
										<%= link_to new_user_registration_path,class:"no_ajaxify" do %><div class="btn btn-recommand tipsy-tipsy" title="Recommand" id="<%= @project.id%>project-like">
										</div><% end %>
										<div class="btn btn-unrecommand tipsy-tipsy" title="Unrecommand" id="<%= @project.id%>project-unlike" style="display:none;">
										</div>
									</li>	
									<li>
									<!-- Twitter -->
									<div class="btn btn-twitter tipsy-tipsy" title="Tweet">
										<a href="https://twitter.com/share" class="twitter-share-button" data-count="none"></a>
										<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
									</div><!-- end.btn-twitter-->
									<!-- Facebook -->
									<div class="btn btn-facebook tipsy-tipsy" title="Post to Facebook">
										<div class="fb-share-button" data-href="https://www.ratafire.com<%=user_project_path(@project.creator, @project)%>" data-type="icon">
										</div>
									</div><!-- end.btn-facebook-->
									</li>
								<% end %> <!-- end.if user_signed_in? -->										
							</div><!-- end.toolbox-->
							</div><!-- end.textbox-mini-->
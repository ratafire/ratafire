<!--~~~~~~~~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<!-- Page Title -->
	<% provide(:title, @project.title) %>

<!-- Script to show Edit button -->
<script>
	$(document).ready(function() {
	$('#about-case').hover(function() {
  		$("#edit-project").toggle();
	});
	});
</script>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Second Header for Projects ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<% content_for(:second_header) do %>
    	<%= render 'projects/project_header' %>
	<% end %>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Sidebar ~~~~~~~~~~~~~~~~~~~~~~~~-->	

	<% content_for(:side_bar) do %>
    	<%= render 'layouts/sidebar_project' %>
	<% end %>

<!--~~~~~~~~~~~~~~~~~~~~~~~~ Page Contents ~~~~~~~~~~~~~~~~~~~~~~~~-->

	<!-- Main Content -->
	<div class="main-content-project">
		<!-- Post Content -->
		<div class="post-content" id="about-case">
			<!-- About Title -->
			<div class="post-about-bg">
				<div class="textbox-mini">
					<div class="post-about-title">
						<li style="font-size: 1.4em;">Recommanders</li>
					</div>
				</div>
			</div>
			
			<!-- About Content -->
			<% if @recommanders.any? %>
				<div class="lightbox2" style="border-color: #bbbbbb;margin-top:30px;">
					<%= render partial: "projects/recommanders", collection: @recommanders, :as => :user %>
				</div>
			<% else %>
					<div class='blank-update-box'>
						<h5>Be the first to recommand this project.</h5>	
					</div>				
			<% end %>	

			<!-- Pagination -->
			<div id="profile-paginate">
				<div class="textbox-mini">
					<span><%= will_paginate @recommanders, :param_name => 'page', class:"rata_pagination no_ajaxify" %></span>	
				</div>	
			</div>	

			<!-- Cutter --><ol style="height: 80px;"></ol>			

		</div><!-- end of post-content -->				

					<!-- License -->
					<%= render 'shared/license'%>

					<%= render 'layouts/footer' %>
	</div><!-- end of main-content -->
<% if show_to_subscribers?(@project) %>
	<!-- To Subscribers Title -->
	<div class="inspiration-bg">
		<div class="textbox-mini">
			<div class="post-about-title">
				<li style="font-size: 1.4em;">To Subscribers</li>
			</div>
		</div>
	</div>
	<!-- To Subscribers Content -->
	<div class="lightbox2 post-content-c" style="margin-top:0px;">
		<div class="textbox-mini" >
			<div class="project-to-subscribers-holder">
				<span id="post-usericon" style="float:left;margin:18px 15px 0px 0;">
					<%= link_to @project.creator, class:"no_ajaxify no_decoration" do %>
						<div class="user-icon-holder" style="background-image:url(<%= @project.creator.profilephoto.url(:small64) %>);"></div>
					<% end %>
				</span>
				<%= simple_format(@project.creator.why)%>
		<!-- Those who have subscribed to the user -->
		
			<!-- Without Sub-sus-->
			<% unless @subscribers.count == 0 then %>
				<div class="sub-sus-holder" style="margin-left:0px;">
					Be the first to subscribe to <%= link_to @project.creator.fullname, @project.creator,class:"no_ajaxify" %>.
				</div>					
			<% else %>
				<div class="project-subscribed-users-holder">
					<!-- With Sub-sus -->
					<!-- 1 Sub-sus -->
					<div class="sub-sus-holder">
						<% if @subscribers.count == 1 then %>
							<%= link_to @project.creator.sub_susers[0].fullname, @project.creator.sub_susers[0], class:"no_ajaxify"%> supports <%= link_to @project.creator.fullname, @project.creator, class:"no_ajaxify"%>.
						<% else %>		
							<!-- 2 Sub-sus -->
							<% if @subscribers.count == 2 then %>
								<%= link_to @project.creator.sub_susers[0].fullname, @project.creator.sub_susers[0], class:"no_ajaxify"%> and <%= link_to @project.creator.sub_susers[1].fullname, @project.creator.sub_susers[1], class:"no_ajaxify"%> support <%= link_to @project.creator.fullname, @project.creator, class:"no_ajaxify"%>.
							<% else %>
								<!-- >2 Sub-sus -->
								<%= link_to @project.creator.sub_susers[0].fullname, @project.creator.sub_susers[0], class:"no_ajaxify"%>, <%= link_to @project.creator.sub_susers[1].fullname, @project.creator.sub_susers[1], class:"no_ajaxify"%> and <%= link_to @subscribers_others, subscribers_path(@project.creator), class:"no_ajaxify"%> support <%= link_to @project.creator.fullname, @project.creator, class:"no_ajaxify"%>.
							<% end %>
						<% end %>
					</div>	
					
					<%= render partial: "supports/project_current_subscribers", collection: @subscribers, :as => :user %>

					<!-- if User has subscribers-->
					<% if @project.creator.subscribers then %>
						<%= link_to subscribers_path(@project.creator), class:"subscription no_ajaxify" do %>
							<div class="supporter-image" style="background-image:url(/assets/more_subscribers.png);border: 1px solid #ddd;"></div>
						<% end %>	
					<% else %>
						<%= link_to supporters_path(@project.creator), class:"subscription no_ajaxify" do %>
							<div class="supporter-image" style="background-image:url(/assets/more_subscribers.png);border: 1px solid #ddd;"></div>
						<% end %>
					<% end %>
				</div><!-- end .project-subscribed-users-holder-->		
			<% end %>		

		
	</div><!-- end .project-to-subscribers-holder-->		

	<!-- Subscription Button-->		
<% if current_user != @project.creator && @project.users.count == 1 then %>	
	<% if subscriber_status then %>
		<% if @project.creator.subscribed_by?(current_user) %>
		<% else %>
			<div style="margin: 15px -2px 0 0; text-align:right;">
				<%= link_to "Subscribe", subscribe_path(@project.creator), class:"btn btn-medium btn-medium-green no_ajaxify"%>
			</div>
		<% end %>	
	<% else %>
		<% if user_signed_in? %>
						<div class="lightbox2-bordered">
							<div class="textbox-mini">
								<h4 style="color:#2297ce;">To subscribe to other users you must</h4>
								<% unless current_user.profilephoto? then %>
								<div class="user-why-passage">Have a profile photo ~ <%= link_to "Edit Profile", edit_user_path(current_user), class:"no_ajaxify"%></div>	
								<% end %>
								<% unless current_user.github != nil || current_user.facebook != nil then %>						
								<div class="user-why-passage">Connect your Ratafire account to <%= link_to "GitHub",user_omniauth_authorize_path(:github),class:"no_ajaxify" %> or <%= link_to "Facebook",user_omniauth_authorize_path(:facebook),class:"no_ajaxify" %>.</div>
								<% end %>
							</div><!-- end.textbox-mini-->

						</div><!-- end.lightbox2-bordered-->
		<% else %>
								<div class="lightbox2-bordered">
							<div class="textbox-mini" style="text-align:right;color:#999;margin-top:20px;">
									<%= link_to "Sign in", new_user_session_path , class: "no_ajaxify" %> to subscribe to <%= link_to @project.creator.fullname, @project.creator,class:"no_ajaxify" %>. Don't have an account? <%= link_to 'Sign up', beta_path, class:"no_ajaxify" %>.	
										</div><!-- end.textbox-mini-->

						</div><!-- end.lightbox2-bordered-->			
		<% end %><!-- end.if user_signed_in?-->				
	<% end %>	
<% end %><!-- end.if current_user != @project.creator-->					


		</div><!-- end.textbox-mini-->
	</div><!-- end.lightbox2-->	
<% end %>
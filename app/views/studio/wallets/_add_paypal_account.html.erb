<%= form_for(paypal_account, url: user_payment_paypal_accounts_path(user.id),:remote => true, :html =>{:id => 'add-paypal-account-form'}, name:"add-paypal-account-form") do |f| %>
	<%= f.hidden_field :user_id, value: @user.id %>
	<!-- Last name -->
	<div class="form-group">
		<div class="row mb-20">
			<div class="col-lg-12 text-grey-300">
				<%= t 'views.creator_studio.paypal.add_paypal_message' %>
			</div>
		</div>
		<div class="row mb-20">
			<label class="col-lg-3 control-label"><%= t 'views.creator_studio.paypal.paypal_email' %>:</label>
			<div class="col-lg-9">
				<%= f.email_field :email, class:"form-control", id:"paypal-email", placeholder:'you@domain.com' %>
			</div>
		</div>
	</div>
	<div class="text-right">
		<%= link_to paypal_user_studio_wallets_path(current_user.username) do %>
			<span class="btn btn-default"><%= t 'views.utilities.editor.cancel' %></span>
		<% end %>
		<%= f.submit I18n.t('views.creator_studio.paypal.connect'), class: "btn btn-blue", id:"bank-account-submit" %>
	</div>	
<% end %>
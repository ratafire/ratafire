<div class="col-lg-3 col-sm-6">
	<div class="panel">
		<div class="panel-body">
			<div class="row mb-20">
				<div class="col-lg-12">
					<h4><i class="ti-announcement mr-15"></i><%= reward.goal_title %></h4>
					<span class="label bg-grey-100"><%= reward.campaign.title %></span>
				</div>
			</div>
			<div class="row mb-20">
				<div class="col-lg-12">
					<span class="btn bg-rainbow-800"><%= reward.due.strftime('%m')%></span>
					<span class="btn bg-rainbow-800"><%= reward.due.strftime('%d')%></span>
					<span class="btn bg-rainbow-800"><%= reward.due.strftime('%Y')%></span>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<!-- Progress Bar -->
					<div class="progress" style="height:40px;border-radius:5px;clear:both;" data-popup="tooltip" title="20% <%= t 'views.utilities.menu.of' %> $500" data-placement="top">

						<div class="progress-bar bg-rainbow-800 active" style="width: 20%;padding:12px;overflow:hidden;"  >
							<span style="font-size:1.8em;white-space: nowrap;">20% <%= t 'views.utilities.menu.of' %> $500</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<ul class="media-list dropdown-content-body <% unless notification.is_read %>bg-grey-100<% end %>">
	<li class="media">
		<div class="media-left">
			<img src="/assets/logo/logoicon_water_large_flat.jpg" class="profile-thumb-holder cover-profilephoto-holder img-sm" alt="">
		</div>

		<div class="media-body">
			<%= link_to upcoming_user_studio_wallets_path(current_user.username), class:"media-heading" do %>
				<span class="text-semibold"><%= t 'mailer.payment.subscription.receipt.ratafire_receipt'%></span>
				<span class="media-annotation pull-right"><%= time_ago_in_words(notification.created_at) %><%= t 'views.utilities.menu.ago'%></span>
			<% end %>
			<span class="text-grey">
				<span><%= t 'mailer.payment.subscription.receipt.payment_amount'%><%= currency_signs(Transaction.find(notification.trackable_id).total, unit: currency_signs(Transaction.find(notification.trackable_id).currency)) %></span>
			</span>
		</div>
	</li>
</ul>
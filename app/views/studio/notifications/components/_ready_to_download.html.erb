<ul class="media-list dropdown-content-body <% unless notification.is_read %>bg-grey-100<% end %>">
	<li class="media">
		<div class="media-left">
			<img src="<%= RewardReceiver.find(notification.trackable_id).reward.user.profilephoto.image.url(:thumbnail40)%>" class="profile-thumb-holder cover-profilephoto-holder img-sm" alt="">
		</div>

		<div class="media-body">
			<%= link_to profile_url_path(RewardReceiver.find(notification.trackable_id).reward.user.username), class:"media-heading" do %>
				<span class="text-semibold"><%= RewardReceiver.find(notification.trackable_id).reward.user.preferred_name %></span>
				<span class="media-annotation pull-right"><%= time_ago_in_words(notification.created_at) %><%= t 'views.utilities.menu.ago'%></span>
			<% end %>
			<span class="text-grey">
				<%= RewardReceiver.find(notification.trackable_id).reward.title %><%= t 'mailer.payment.shipping_order.ready_for_download' %><%= link_to RewardReceiver.find(notification.trackable_id).reward.reward_uploads.package.url do %><span class="btn bg-green btn-xs height-30 pl-20 pr-20 ml-5"><%= t 'views.utilities.menu.download' %></span><% end %>
			</span>
		</div>
	</li>
</ul>
<% if @video %>
	//Show text editor
	$('#video-progress-box').remove();
	$('#add-video').remove();
	$('#application-image-preview').remove();
	//Show video
	$('#apply-panel').prepend("<%= j render(:partial => 'studio/campaigns/wizard_video_preview', :locals => {:video => @video, :campaign => @campaign}) %>");
	//Video js
	initiate_videojs(); 	
<% end %>
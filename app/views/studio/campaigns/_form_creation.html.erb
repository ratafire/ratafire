<fieldset title="3">
	<legend class="text-semibold"><%= t 'views.campaign.your_creation' %></legend>
	<!-- Topic -->
	<div class="row text-center p-40">
		<div class="text-giant text-thin"><%= t 'views.campaign.how_would_you_tell_your_friend_more_about_your_project' %></div>
		<h3 class="text-thin text-grey-200">"<%= HistoricalQuote.find(10).quote %>" - <%= HistoricalQuote.find(10).author %></h3>
	</div>
	<div class="row" >
		<div class="col-md-12">
			<div class="pb-20"><%= t 'views.campaign.a_long_description_for_your_creation' %>: <span class="text-danger">*</span></div>
			<div class="form-group border-dotted p-30">
				<%= f.text_area :content, type:"hidden",class:"medium-editor-textarea editable-textarea form-transparent min-height-600 required", data:{placeholder: t('views.campaign.long_description_creation_placeholder')},id:"majorpost_content_textarea" %>
			</div>
		</div>
	</div>
</fieldset>
<script type="text/javascript">
	//Initiate editor js
	initiate_editor();
	initiate_text_editor('<%= @upload_url %>','subscribe');
	// Default file input style
	$(".file-styled").uniform({
		fileButtonClass: 'action btn bg-rainbow'
	});
</script>
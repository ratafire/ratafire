<!-- Page Title -->
<% provide(:title, sanitize(@user.preferred_name)) %>

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="panel panel-blue">
            <div class="panel-heading">
                <h6 class="panel-title text-thin"><i class="huaxia huaxia-ny4 mr-10"></i><%= t 'views.utilities.menu.backers'%></h6>
                <div class="heading-elements">
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="row m-5 pl-20 pr-20 mt-20-">
                    	<table class="table datatable-basic responsive no-wrap table-hover no-border text-grey" id="my_likeds" data-source="<%= backers_datatable_user_studio_community_path(@user.id, format: "json") %>">
                    		<thead class="no-border">
                    			<tr class="no-border">
                    				<th style="width:10%;" class="no-border"><%= t 'views.creator_studio.upcoming.name' %></th>
                    				<th style="width:20%;" class="no-border"></th>
                    				<th style="width:30%;" class="no-border"><%= t 'mailer.payment.subscription.receipt.amount' %></th>
                    				<th style="width:20%;" class="no-border"><%= t 'views.creator_studio.upcoming.action' %></th>
                                    <th style="width:20%;" class="no-border"><%= t 'views.payment.backs.refund' %></th>
                    			</tr>
                    		</thead>
                    	</table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>            
<script type="text/javascript">
    $.extend( $.fn.dataTable.defaults, {
        "bFilter": false,
        "bLengthChange": false,
        autoWidth: false,
        columnDefs: [{ 
            orderable: false,
            width: '100px'
        }],
        dom: '<"datatable-header"fl><"datatable-scroll"t><"datatable-footer"ip>',
        language: {
            search: '<span>Filter:</span> _INPUT_',
            lengthMenu: '<span>Show:</span> _MENU_',
            paginate: { 'first': 'First', 'last': 'Last', 'next': '&rarr;', 'previous': '&larr;' }
        },
        drawCallback: function () {
            $(this).find('tbody tr').slice(-3).find('.dropdown, .btn-group').addClass('dropup');
        },
        preDrawCallback: function() {
            $(this).find('tbody tr').slice(-3).find('.dropdown, .btn-group').removeClass('dropup');
        }
    });
    $('#my_likeds').DataTable({
        responsive: true,
        sPaginationType: "full_numbers",
        "language": {
            "url": "/translation/dataTable/<%= I18n.locale %>.json"
        },
        bProcessing: true,
        bServerSide: true,
        sAjaxSource: $('#my_likeds').data('source')
    });	
    // Enable Select2 select for the length option
    $(window).on('load page:render turbolinks:render', function() { 
        // Enable Select2 select for the length option
        $('.dataTables_length select').select2({
            minimumResultsForSearch: Infinity,
            width: 'auto'
        });    
    });  
</script>
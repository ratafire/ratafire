<!--~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~-->
<!-- Page Title -->
<% provide(:title, sanitize(@user.preferred_name)) %>
<!-- Page Specific JS -->
<div class="row">
	<div class="col-lg-12 col-md-12">
		<div class="panel panel-blue bg-white-transparent">
			<div class="panel-body" id="transactions-panel-body">
				<!-- Reward -->
				<%= render partial:'studio/rewards/reward', locals: {reward: @reward}%>
				<!-- Confirmation -->
				<div class="row p-20">
					<div class="col-md-8">
						<!-- Ships to -->
						<%= render partial:'studio/rewards/ships_to', locals: {shipping_address: @reward_receiver.shipping_address}%>
					</div>
					<div class="col-md-4">
						<div class="row mt-20">
							<%= form_for(@reward_receiver, url: ship_reward_now_user_payment_reward_receivers_path(@user.id,@reward_receiver.id), html: {method: :post}) do |f| %>
								<div class="bg-grey-100 p-20 mb-20"><%= t 'views.creator_studio.rewards.please_ship' %></div>
								<div>
									<%= f.label t('views.creator_studio.rewards.shipping_company') %>
									<%= f.text_field :shipping_company, class: "form-control mb-10"%>
									<%= f.label t('views.creator_studio.rewards.tracking_number') %>
									<%= f.text_field :tracking_number, class: "form-control mb-10"%>
								</div>
								<div class="btn-group btn-group-justified">
									<div class="btn-group">
										<%= f.submit t('views.creator_studio.rewards.mark_as_shipped'), class:"btn btn-blue btn-xlg"%>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
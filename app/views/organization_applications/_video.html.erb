<% if @video.encoded_state == "finished" then %>
		<!-- Display Video if Success x-->
		<div class="video-display" id="uploaded-video-display" style="margin-bottom:40px;margin-top:5px;width:784px;height:393px;">		
			<div style="position:auto;z-index: 100;">
				<%= videojs_rails sources: { webm: @video.output_url, mp4: @video.output_url_mp4 }, height:"441", width:"784", poster:@video.thumbnail %>
			</div>
		</div>
<% else %>
	<!-- Video Success-Box-->
	<div id="video-success-box" style="height:80px;width:784px;margin-bottom:40px;margin-top:5px;">
		<div class="video-upload-words">
			<span>Upload successful! Your Video is now encoding.</span>
			</div>
		</div>
	</div>		
<% end %>

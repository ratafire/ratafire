<!--~~~~~~~~~~~~~~~~~~~~~~~~ Before ~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!-- Page Title -->
	<% provide(:title, "Organizations") %>
<!--~~~~~~~~~~~~~~~~~~~~~~~~ Facebook Open Graph ~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~ Javascript ~~~~~~~~~~~~~~~~~~~~~~~~-->
<% content_for :additional_background do %>
	<div class="organization-background">
	</div>	
	<div class="organization-background-blur">
	</div>	
<% end %>
<div class="wrapper-main">	
	<%= render 'organization_applications/organization_icon_upload'%>
	<div class="organization-content">
		<div class="organization-post-content" style="margin-top:0px;">

		<h2><%= @organization_application.name %></h2>	
		<p><%= @organization_application.location %></p>

		<h2>How the Organization Get Paid</h2>
		<% if @organization_application.organization_paypal_account == nil then %>
			<%= render 'organization_applications/add_paypal'%>
			<%= form_for [@organization_application], :validate => true, :url => organization_applications_update_path(current_user.id, @organization_application),:html => {:class => "no_ajaxify", :id => "organization_application_form"} do |f| %>
				<%= f.hidden_field :step, :value => 4, id:"step_id" %>
			<% end %>	
			<div style="margin: 15px 24px 20px 0; text-align:right;">
				<div class="btn btn-small2 btn-small-white no_ajaxify" id="organization_application_payments_back">Back</div>
			</div>		
		<% else %>
			<%= render 'organization_applications/get_paid_by_paypal'%>
			<%= form_for [@organization_application], :validate => true, :url => organization_applications_update_path(current_user.id, @organization_application),:html => {:class => "no_ajaxify", :id => "organization_application_form"} do |f| %>
				<%= f.hidden_field :step, :value => 4, id:"step_id" %>
				<!-- Back -->
				<div style="margin: 0 0 20px 0; text-align:right;">
					<!-- Next Step -->	
					<div style="float:right"><%= f.submit "Apply", class: "btn-submit btn-submit-small btn btn-small btn-small-green no_ajaxify" %></div>
					<div class="btn btn-small2 btn-small-white no_ajaxify" id="organization_application_payments_back" style="float:right;margin-right:5px;">Back</div>
				</div>							
			<% end %>			
		<% end %>				

		</div><!-- end.post-content-c-->	
	</div><!-- end.organization-content-->
	<div style="padding: 40px 20px 18px 0;">
	<%= render 'layouts/footer' %>
	</div>		
</div><!-- end .wrapper-main-->		
<div id="s3_direct_uploader_video_image" class="mt-20 ml-20 mr-20">
	<%= s3_uploader_form callback_url: content_video_images_path,
		callback_method: 'POST',
		id: "s3_uploader_video_image",
		callback_param: "video_image[direct_upload_url]",
		expiration: 24.hours.from_now.utc.iso8601,
		max_file_size: 20.megabytes,:remote => true,
		data: {majorpost_uuid: video.majorpost_uuid, video_uuid: video.uuid} do %>
		<div class="valign-middle dropzone-bg" id="#video-image-dropzone">
			<div id="video-image-progress-case">
			</div>
			<%= file_field_tag :file, multiple: false, class:"artwork-choose btn-upload" %>
			<div class="cursor-pointer center-block text-center">
				<div id="big-image-upload">
					<div class="huaxia huaxia-multipleimage text-grey-100" style="font-size:40px;"></div>
					<div class="text-size-large text-grey-200 mt-5"><%= t 'views.utilities.editor.drop_to_upload_thumbnail' %></div>
					<div class="text-grey-100"><%= t 'views.utilities.editor.or_click' %></div>
				</div>
				<div id="small-image-upload" style="display:none;">
					<div class="text-grey-100"><%= t 'views.utilities.editor.add_more' %></div>
				</div>
			</div>
		</div>	
	<% end %>	
	<!-- Progress bar -->
	<%= render partial:'utilities/editor/editor_progress_bar', locals:{name:'artwork'} %>		
</div>
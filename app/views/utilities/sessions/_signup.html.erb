<!-- Signup Form -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class => 'signup-form signup-form--signup signup-framed', :id => 'homepage-signup-form'}) do |f| %>
    <!-- Form Indications -->
    <div class="text-center">
        <img alt=t('views.utilities.menu.ratafire') src="/assets/logo/ratafire_light_blue_<%= I18n.locale %>.png" style="height:40px;" />
    </div>
    <div class="text-center text-white mt-20 mb-20" style="font-size:18px;"><%= t 'views.home.join' %> <%= number_to_human(User.count, :format => '%n%u', :units => { :thousand => 'k' }) %> <%= t 'views.home.creators_and_fans' %></div>
    <% if I18n.locale == :zh %>
        <!-- Last Name -->
        <%= f.email_field :firstname,placeholder:t('views.profile.settings.profile_settings.last_name'), class:"signup-input", style:"width:50%;float:left;border-radius: 0.5rem 0 0 0;" %>
        <!-- First Name -->
        <%= f.email_field :lastname,placeholder:t('views.profile.settings.profile_settings.first_name'), class:"signup-input", style:"width:50%;border-radius: 0 0.5rem 0 0;" %>
    <% else %>
        <!-- First Name -->
        <%= f.email_field :firstname,placeholder:t('views.profile.settings.profile_settings.first_name'), class:"signup-input", style:"width:50%;float:left;border-radius: 0.5rem 0 0 0;" %>
        <!-- Last Name -->
        <%= f.email_field :lastname,placeholder:t('views.profile.settings.profile_settings.last_name'), class:"signup-input", style:"width:50%;border-radius: 0 0.5rem 0 0;" %>
    <% end %>
    <!-- Email -->
    <%= f.email_field :email,placeholder:t('views.profile.settings.profile_settings.your_email'), class:"signup-input" %>
    <!-- Password -->
    <%= f.password_field :password,placeholder:t('views.profile.settings.account_settings.password'), autocomplete: "off", class:"signup-input"%>
    <!-- Submit -->
    <%= f.submit t('views.utilities.btn.sign_up'), class:"signup-input signup-input--submit", style:"border-radius: 0 0 0.5rem 0.5rem !important;"%>
    <!-- Switch Form -->
    <label for="toggle--login" class="signup-text signup-text--small signup-text--centered"><%= t 'views.home.not_new_log_in' %></label>
<% end %><!-- end form_for resource -->